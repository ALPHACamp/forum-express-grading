{{> restaurant-tabs route='topRestaurants'}}
<h1>Top 10 人氣餐廳</h1>
<hr />
<div class="row justify-content-center" style="text-align: center;">
  {{#each restaurants}}
  <div class="card mb-3 w-75">
    <div class="row g-0">
      <div class="col-md-4">
        <img src="{{this.image}}">
      </div>
      <div class="col-md-8">
        <div class="card-body d-flex align-items-start flex-column">
          <h5 class="card-title">{{this.name}}</h5>
            <span class="bg-secondary badge">收藏數：{{this.favoritedCount}}</span>
            <p class="card-text mt-2 text-start">{{this.description}}</p>
            <div class="d-flex mb-4">
              <form action="/restaurants/{{this.id}}">
                <button type="submit" class="btn btn-primary m-1 ms-0">Show</button>
              </form>
              {{#if isFavorited}}
              <form action="/favorite/{{this.id}}?_method=DELETE" method="POST">
                <button type="submit" class="btn btn-danger m-1 ms-0">移除最愛</button>
              </form>
              {{else}}
              <form action="/favorite/{{this.id}}" method="POST">
                <button type="submit" class="btn btn-primary m-1 ms-0">加到最愛</button>
              </form>
              {{/if}}
            </div>
        </div>
      </div>
    </div>
  </div>
  {{/each}}
</div>