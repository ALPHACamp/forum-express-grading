{{> restaurant-tabs route='topRestaurants'}}
<h1>人氣餐廳</h1>
<hr />
<div class="row" style="text-align: center;">
  {{#each restaurants}}
  <div class="col-7 bg-white my-2 p-2 mx-auto d-flex">
    <div class="ms-3 me-5">
        {{#if this.image}}
        <img src="{{this.image}}" width="140px" height="140px" style="transition: opacity 0.5s; opacity:0;"
          onload="this.style.opacity=1;" />
        {{else}}
        <img src="https://via.placeholder.com/140" width="140px" height="140px" />
        {{/if}}
    </div>
    <div class="d-flex flex-column justify-content-start align-items-start">
      <a href="/restaurants/{{this.id}}">
        <h2>{{this.name}}</h2>
      </a>
      <span class="bg-secondary badge my-2">收藏數：{{this.favoritedCount}}</span>
      <p class="card-text text-start my-2">{{this.description}}</p>
      <div class="d-flex justify-content-center align-items-center my-2">
        <a class="btn btn-primary me-3" href="/restaurants/{{this.id}}">Show</a>
        {{#if this.isFavorited }}
        <form action="/favorite/{{this.id}}?_method=DELETE" method="POST" style="display: contents;">
          <button type="submit" class="btn btn-danger">移除最愛</button>
        </form>
        {{else}}
        <form action="/favorite/{{this.id}}" method="POST" style="display: contents;">
          <button type="submit" class="btn btn-primary">加到最愛</button>
        </form>
        {{/if}}
      </div>
    </div>
  </div>
  {{/each}}
</div>