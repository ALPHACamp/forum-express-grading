{{>restaurant-tabs route='topUsers'}}
<h1>美食達人</h1>
<hr>
<br>
<div class="row" style="text-align: center;">
  {{#each users}}
  <div class="col-3">
    <a href="/users/{{this.id}}">
      {{#if this.image}}
      <img src="{{this.image}}" width="140px" height="140px" style="transition: opacity 0.5s; opacity:0;" onload="this.style.opacity=1;">
      {{else}}
      <img src="https://fakeimg.pl/140/" width="140px" height="140px" />
      {{/if}}
    </a>
    <h2>{{this.name}}</h2>
    <span class="bg-secondary badge">追蹤人數: {{this.followerCount}}</span>
    {{#if isFollowed}}
    <form action="/following/{{this.id}}?_method=DELETE" method="POST" >
      <button type="submit" class="btn btn-primary mt-2">Following</button>
    </form>
    {{else}}
    <form action="/following/{{this.id}}" method="POST" >
      <button type="submit" class="btn btn-outline-primary mt-2">Follow</button>
    </form>
    {{/if}}
  </div>
  {{/each}}
</div>
