<section class="row justify-content-center">
  <div class="col-12 col-md-6">
    <div class="card p-4">
      <form action="/signin" method="POST" class="d-flex flex-column gap-3">
        <h3 class="text-center">登入</h3>
        <div class="form-row">
          <label for="email" class="form-label">帳號</label>
          <input type="email" id="email" name="email" class="form-control" value="{{email}}" required />
        </div>
        <div class="form-row">
          <label for="password" class="form-label">密碼</label>
          <input type="password" id="password" class="form-control" name="password" aria-describedby="passwordHelp" />
          <div id="passwordHelp" class="form-text">至少六位，最多十六位，需要區分大小寫</div>
        </div>
        <button type="submit" class="btn btn-success mt-2">登入</button>
        <p class="m-0">還沒有帳號？<a href="/signup" style="text-decoration: none;">註冊</a>
        </p>
      </form>
    </div>
  </div>
</section>