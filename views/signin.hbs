<div class='mb-4 text-center'>
	<h1 class='h3 font-weight-normal mb-3'>Sign In</h1>
</div>
<form class='form-signup' action='/signin' method='POST' style='width: 100%;'>
	<div class='form-row mb-3'>
		<label class='form-label' for='email'>Email</label>
		<input
			type='text'
			id='email'
			name='email'
			class='form-control'
			placeholder='Email'
			required
		/>
	</div>
	<div class='form-row mb-3'>
		<label class='form-label' for='password'>Password</label>
		<input
			type='password'
			id='password'
			name='password'
			class='form-control'
			placeholder='Password'
			required
		/>
	</div>
	<button class='btn btn-primary btn-block' type='submit'>SignIn</button>
</form>
<div class='mb-4 text-center'>
	<p><a href='/signup'>Sign Up</a></p>
</div>