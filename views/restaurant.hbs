<div class="row">
  <div class="col-md-12">
    <h1>{{restaurant.name}}</h1>
    <h5>[ {{restaurant.Category.name}} ]</h5>
  </div>
  <div class="col-md-4">
    <img class="img-responsive center-block" src="{{restaurant.image}}" style="width: 250px; margin-bottom: 25px; transition: opacity 0.5s; opacity:0;" onload="this.style.opacity=1;">
    <div class="well">
      <ul class="list-unstyled">
        <li><strong>Opening Hour:</strong> {{restaurant.openingHour}}</li>
        <li><strong>Tel:</strong> {{restaurant.tel}}</li>
        <li><strong>Address:</strong> {{restaurant.address}}</li>
      </ul>
    </div>
  </div>
  <div class="col-md-8">
    <p style="white-space: break-spaces;">{{restaurant.description}}</p>
    <button type="button" class="btn btn-link">
      <a class="btn btn-primary btn-link link-light" href="/restaurants/{{restaurant.id}}/dashboard">
        Dashboard
      </a>
    </button>
    <br>
  </div>
  <hr>
</div>
<a class="btn btn-outline-secondary" href="javascript:history.back()">Back</a>