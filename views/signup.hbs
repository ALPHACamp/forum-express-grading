<section class="row justify-content-center">
  <div class="col-12 col-md-6">
    <div class="card p-4">
      <form action="/signup" method="POST" class="d-flex flex-column gap-3">
        <h3 class="text-center">註冊</h3>
        <div class="form-row">
          <label for="name" class="form-label">姓名</label>
          <input
            type="text"
            id="name"
            name="name"
            class="form-control"
            value="{{name}}"
          />
        </div>
        <div class="form-row">
          <label for="email" class="form-label">帳號</label>
          <input
            type="email"
            id="email"
            name="email"
            class="form-control"
            value="{{email}}"
            required
          />
        </div>
        <div class="form-row">
          <label for="password" class="form-label">密碼</label>
          <input
            type="password"
            id="password"
            class="form-control"
            name="password"
            aria-describedby="passwordHelp"
          />
          <div
            id="passwordHelp"
            class="form-text"
          >至少六位，最多十六位，需要區分大小寫</div>
        </div>
        <div class="input-field">
          <label for="confirmPassword" class="form-label">再次輸入密碼</label>
          <input
            type="password"
            id="confirmPassword"
            class="form-control"
            name="confirmPassword"
          />
        </div>
        <button type="submit" class="btn btn-success mt-2">註冊</button>
        <p class="m-0">已經有帳號？<a
            href="/signin"
            style="text-decoration: none;"
          >登入</a>
        </p>
      </form>
      <div class="d-grid gap-4 mt-3">
        <span
          class="flex-fill"
          style="height: 1px; background-color: rgb(201, 201, 201);"
        ></span>
        <a href="#" class="btn btn-primary">以Facebook登入</a>
      </div>
    </div>
  </div>
</section>