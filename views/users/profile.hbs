<div class="row mb-5 bg-white border">
  <div class="col-4">
    <img class="img-responsive center-block" src="{{user.image}}"
      style="width: 100%;transition: opacity 0.5s; opacity:0;" onload="this.style.opacity=1;">
  </div>
  <div class="col-8 my-3">
    <h2>{{user.name}}</h2>
    <p>{{user.email}}</p>
    <a href="/users/{{user.id}}/edit" class="btn btn-primary">編輯</a>
  </div>
</div>