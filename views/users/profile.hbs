<div class="card mb-4 shadow-sm">
  <div class="row mb-5">
    <div class="col-md-4">
      {{#if user.image}}
      <img src="{{user.image}}" width="300px" height="300px" style="transition: opacity 0.5s; opacity:0;"
        onload="this.style.opacity=1;" />
      {{else}}
      <img src="https://via.placeholder.com/300" width="300px" height="300px" style="transition: opacity 0.5s; opacity:0;"
        onload="this.style.opacity=1;" />
      {{/if}}
    </div>
    <div class="col-md-8">
      <h5 class="card-title">{{user.name}}</h5>
      <p class="card-text">
        {{user.email}}
      </p>
      <a href="/users/{{user.id}}/edit"><button type="submit" class="btn btn-primary">edit</button></a>
    </div>
  </div>
</div>