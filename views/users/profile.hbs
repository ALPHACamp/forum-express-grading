<div class="row mx-auto">
    <div class="col-md-6 text-center">
        <img class="img-responsive center-block" src="{{user.image}}" alt="avatar" style="border-radius: 50%; width: 350px; margin-bottom: 25px; transition: opacity 0.5s; opacity:0;" onload="this.style.opacity=1;">
    </div>
    <div class="col-md-6">
        <h2>{{user.name}}</h2>
        <h3>{{user.email}}</h3>
        {{#ifCond user.id loginUser.id}}
        <a class="btn  btn-primary" href="/users/{{user.id}}/edit">Edit</a>
        {{/ifCond}}
    </div>
</div>
<div class="card mt-3">
    <div class="card-header">
    {{comments.count}}則已評論餐廳
    </div>
    <div class="card-body">
        {{#each comments.rows}}
            <img class="me-2" src="{{this.Restaurant.image}}" alt="image" style="width: 15%">
        {{/each}}
    </div>
    </div>