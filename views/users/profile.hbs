<div class="row mt-3 mb-5">
  <div class="col-md-4">
    <img class="img-thumbnail  mb-5" src="{{user.image}}"
      style="height: 250px; width: 250px; transition: opacity 0.5s; opacity:0; border-radius:50%"
      onload="this.style.opacity=1;">
  </div>
  <div class="col-md-8">
    <h2>{{user.name}}</h2>
    <strong>
      <p></p>
    </strong>
    <p>{{user.email}}</p>
    <p>{{ commentCounts }}已評論餐廳</p>
    <a href='/users/{{user.id}}/edit'>
      <button type="button" class="btn btn-primary">Edit</button>
    </a>
  </div>

  <hr>

  <div class="row mt-3 mb-5">
    <h3 class="mb-4">已評論餐廳</h3>
    {{#if comments}}
      {{#each comments}}
      <div class="col-md-3 mb-3">
        <a href="/restaurants/{{this.restaurantId}}">
          <img class="" src="{{this.Restaurant.image}}" width="286px" height="180px"
            style="transition: opacity 0.5s; opacity:0;" onload="this.style.opacity=1;">
        </a>
      </div>
      {{/each}}
    {{else}}
      <p>沒有評論</p>
    {{/if}}
  </div>
</div>