<div class="row bg-white py-3 mt-5">
  <div class="card col-4" style="border: 0;">
    <img
      src="{{#if user.image}}{{ user.image }}{{else}}https://cdn-icons-png.flaticon.com/512/3177/3177440.png{{/if}}"
      alt="avatar" style="height:300px; width:300px; border-radius:50%" class="mx-auto">
  </div>
  <div class="col-8">
    <h3>{{ user.name }}</h3>
    <h5>{{ user.email }}</h5>
    <a href="/users/{{ user.id }}/edit" class="btn btn-primary mt-3">Edit</a>
  </div>
</div>