<div class="row mb-5">

    <div class="col-md-4">
        <img class="img-responsive center-block mb-5" src="{{user.image}}"
            style="width: 300px; transition: opacity 0.5s; opacity:0;" onload="this.style.opacity=1;">

    </div>
    <div class="col-md-8">
        <h1>{{user.name}}</h1>
        <ul class="list-unstyled">
            <li> {{user.email}}</li>
        </ul>
        <p>{{user.Comments.length}}已評論餐廳</p>

        <a class="btn btn-primary" href="/users/{{user.id}}/edit">edit</a>
    </div>
    

</div>

{{!-- Comment --}}
<div class="row mb-5 card">
    <div class="col-md-12 card-header">
        <h4><strong>{{user.Comments.length}}已評論餐廳</strong></h4>
    </div>
    <div class="card-body">
        {{#each user.Comments}}

        <a href="/restaurants/{{this.Restaurant.id}}">
            <img class="img-responsive center-block m-3" src="{{this.Restaurant.image}}"
                style="width: 100px; transition: opacity 0.5s; opacity:0;" onload="this.style.opacity=1;">
        </a>


        {{/each}}
    </div>

</div>