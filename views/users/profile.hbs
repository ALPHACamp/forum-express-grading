<div class="card mb-3">
  <div class="row g-0">
    <div class="col-md-4">
      <img class="img-fluid rounded-start" src="{{user.image}}">
    </div>
    <div class="col-md-8">
      <div class="card-body">
        <h2>{{user.name}}</h2>
        <h3>{{user.email}}</h3>
        <a class="btn btn-primary" href="/users/{{user.id}}/edit">edit</a>
        <a class="btn btn-outline-secondary" href="javascript:history.back()">Back</a>
      </div>
    </div>
  </div>
</div>