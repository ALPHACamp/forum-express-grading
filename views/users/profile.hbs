<div class="row mb-5">
  <div class="col-md-4">
    <img class="img-responsive center-block mb-5" src="{{user.image}}"
      style="max-width: 100%; transition: opacity 0.5s; opacity:0;" onload="this.style.opacity=1;">
  </div>
  <div class="col-md-8">
    <h2>{{user.name}}</h2>
    <br />
    <p>{{user.email}}</p>
    <br />
    <p><strong>{{commentsCounter}}</strong> comments</p>
    {{#ifCond user.id currentUser.id}}
    <a class="btn btn-primary" href="/users/{{user.id}}/edit">edit</a>
    {{/ifCond}}
    <a class="btn btn-outline-secondary" href="javascript:history.back()">Back</a>
  </div>
</div>
<div class="row mb-5">
  <div class="row">
    <p><strong>{{commentsCounter}}</strong> comments</p>
  </div>
  <hr>
  {{#each singleComment}}
  <div class="col-md-2">
    <a href="/restaurants/{{this.id}}">
    <img src="{{this.image}}" style="max-width: 100%; height: auto;">
    </a>
  </div>
  {{/each}}
</div>