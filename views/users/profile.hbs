<div class="row my-1 mx-5 bg-white">
  <div class="col-md-4 px-0">
    <img class="img-responsive center-block"
      src="{{#if userProfile.image}}{{userProfile.image}}{{else}}https://publicdomainvectors.org/tn_img/abstract-user-flat-3.webp{{/if}}"
      style="width: 250px; transition: opacity 0.5s; opacity:0;" onload="this.style.opacity=1;">
  </div>
  <div class="col-md-7 px-1">
    <h3 class="my-3">{{userProfile.name}}</h3>
    <p class="my-2">{{userProfile.email}}</p>
    {{#ifCond userProfile.id user.id}}
    <a href="/users/{{user.id}}/edit" class="btn btn-primary">edit</a>
    {{/ifCond}}
  </div>
</div>