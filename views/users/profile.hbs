<div class="row mb-5">
  <div class="card">
      <div class="d-flex m-2">
        <div class="col-md-4">
          <img src={{user.image}} alt="avatar" class="rounded-circle h-100 img-thumbnail">
        </div>
        <div class="col-md-8 m-3">
            <h2 class='mb-2'style="font-weight: bold;">{{user.name}}</h2>
            <h3>{{user.email}}</h3>
            <br>
            {{#if userAuthed}}
            <a class="btn btn-primary mb-3" href="/users/{{user.id}}/edit">Edit</a>
            {{/if}}
        </div>
      </div>
  </div>
</div>

<div class="card">
  <div class="card-header">
    <h5>{{commentCount}} 已評論餐廳</h5>
  </div>
  <div class="d-flex m-2">
    {{#each comments}}
    <div class="m-1">
      <a href="/restaurants/{{this.Restaurant.id}}">
        <img class="img-responsive center-block mb-5" src="{{this.Restaurant.image}}"
          style="width: 100px; transition: opacity 0.5s; opacity:0;" onload="this.style.opacity=1;">
      </a>
    </div>
    {{/each}}
  </div>
</div>