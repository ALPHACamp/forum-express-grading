<div class="row mb-5">
  <div class="col-md-4">
    <img class="img-responsive center-block mb-5" src="{{user.image}}" style="width: 250px; transition: opacity 0.5s; opacity:0;" onload="this.style.opacity=1;">
    <div class="well">
      <ul class="list-unstyled">
        <li><strong>Name:</strong> {{user.name}}</li>
        <li><strong>Email:</strong> {{user.email}}</li>
      </ul>
      <button type="button" class="btn btn-link">
        <a class="btn btn-link link-primary" href="/users/{{user.id}}/edit">
        Edit
        </a>
      </button>
    </div>
  </div>
  <hr>
</div>