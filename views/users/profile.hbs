<div class="d-flex justify-content-center">
  <div class="card mb-3 col-10">
    <div class="row g-0">
      <div class="col-md-4">
        <img
          src="{{#if user.image}}{{user.image}}{{else}}https://upload.wikimedia.org/wikipedia/commons/thumb/4/46/Question_mark_%28black%29.svg/375px-Question_mark_%28black%29.svg.png{{/if}}"
          class="rounded-circle mt-3 ms-3 mb-3" height="320px" width="320px">
      </div>
      <div class="col-md-8">
        <div class="card-body">
          <h5 class="card-title">{{user.name}}</h5>
          <p class="card-text">{{user.email}}</p>
          <p class="card-text"><strong>{{comment.length}}</strong> 評論的餐廳</p>
          {{#ifCond user.id user.id}}
          <a href="/users/{{user.id}}/edit" class="btn btn-primary">Edit</a>
          {{/ifCond}}
        </div>
      </div>
    </div>
  </div>
</div>
<div class="d-flex justify-content-center">
  <div class="card mb-3 col-10">
    <div class="card">
      <div class="card-header">
        <strong>{{comment.length}}</strong> 評論的餐廳
      </div>
      <div class="card-body d-flex flex-wrap">
        {{#each comment}}
        <div class="ms-4 mb-4">
          <a href="/restaurants/{{this.Restaurant.id}}" style="text-decoration:none;">
            <img src="{{this.Restaurant.image}}" width="90px" height="90px">
          </a>
        </div>
        {{/each}}
      </div>
    </div>
  </div>
</div>