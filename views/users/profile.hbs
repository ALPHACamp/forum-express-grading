<div class="card">
  <div class="card-body">
    <div class="d-flex">
      <div class="flex-shrink-0">
        <img src="{{#if user.image}}{{ user.image }}{{else}}https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-profiles/avatar-1.webp
          {{/if}}" alt="placeholder image" class="img-fluid" style="height: 300px; border-radius: 50%;">
      </div>
      <div class="flex-grow-1 ms-3">
        <h5>{{ user.name }}</h5>
        <p>{{ user.email }}</p>
        <p>{{#ifCond commentCount 0}}尚未評論餐廳{{else}}{{ commentCount }}已評論餐廳
          {{/ifCond}}</p>
        <a href="/users/{{ user.id }}/edit" class="btn btn-primary">Edit</a>
      </div>
    </div>
  </div>
</div>
<div class="card my-4">
  <div class="card-header">
    {{#ifCond commentCount 0}}尚未評論餐廳{{else}}{{ commentCount }}已評論餐廳
    {{/ifCond}}
  </div>
  <div class="card-body d-flex flex-row mb-3 flex-wrap">
    {{#each comments}}
    <div class="card mx-2 mb-2">
      <a href="/restaurants/{{this.Restaurant.id}}">
        <img class="card-img-top" src="{{this.Restaurant.image}}" alt="Card image cap" style="width: 100px">
      </a>
    </div>
    {{/each}}
  </div>
</div>
</div>