<div class="card mb-3 d-flex justify-content-md-center" style="height:250px">
  <div class="row g-0 ">
    <div class="col-md-4 ">
      <img src="{{user.image}}"
        class="img-fluid rounded-start" alt="..." style="height:200px; width: 330px">
    </div>
    <div class="col-md-8">
      <div class="card-body">
        <h5 class="card-title">{{user.name}}</h5>
        <p class="card-text">{{user.email}}</p>
        <a class="btn btn-primary" href="./{{user.id}}/edit" role="button">Edit</a>
      </div>
    </div>
  </div>
</div>