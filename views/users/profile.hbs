<div class="row mb-5">
  <div class="col-md-4">
    <img class="img-responsive center-block mb-5" src="{{user.image}}"
      style="width: 250px; transition: opacity 0.5s; opacity:0;" onload="this.style.opacity=1;">
  </div>
  <div class="col-md-8">
    <p style="white-space: break-spaces;">{{user.name}}</p>
    <p style="white-space: break-spaces;">{{user.email}}</p>
    <p style="white-space: break-spaces;">{{comment.count}} 個已評論餐廳</p>
    {{#ifCond operator.id user.id}}
    <a href="/users/{{user.id}}/edit" class="btn btn-info">edit</a>
    {{/ifCond }}
  </div>
</div>

<div class="row mb-5">
  <div class="col-12">
    <p style="white-space: break-spaces;">{{comment.count}} 個已評論餐廳</p>
  </div>
  {{#each restaurants}}
  <div class="col-md-1 mr-3">
    <a href="/restaurants/{{this.id}}">
      <img class="img-responsive center-block mb-5" src="{{this.image}}"
        style="width: 100%; transition: opacity 0.5s; opacity:0;" onload="this.style.opacity=1;">
    </a>
  </div>
  {{/each}}
</div>