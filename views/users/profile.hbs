{{!-- 使用者基本資料 --}}
<div class="row m-3" style="border:1px solid lightgray;">
  <div class="col-md-12">
  </div>
  {{!-- 大頭照 --}}
  <div class="col-md-5 mt-3">
    <img class="img-responsive center-block mb-5" src="{{user.image}}"
      style="width: 250px; transition: opacity 0.5s; opacity:0;" onload="this.style.opacity=1;">
  </div>
  {{!-- 姓名與編輯按鈕 --}}
  <div class="col-md-7 mt-3">
    <h3><strong>{{user.name}}</strong></h3>
    <h4>{{user.email}}</h4>

    <h5>
      評論餐廳數：
      {{#ifCond comments.count 0 }}
      0
      {{else}}
      {{comments.count}}
      {{/ifCond}}
    </h5>
    {{#ifCond userId user.id}}
    <button type="button" class="btn mt-5">
      <a class="btn btn-primary" href="/users/{{user.id}}/edit">
        edit
      </a>
    </button>
    {{/ifCond}}
  </div>
</div>

{{!-- 使用者已評論餐廳 --}}
<div class="row mt-3" style="border:1px solid lightgray;">
  <h6 class="mt-3">
    {{#ifCond comments.count 0 }}
    0
    {{else}}
    {{comments.count}}
    {{/ifCond}}
    間已評論餐廳
  </h6>
  <br />
  <br />
  <div class="container p" style="">
    <div class="col-md-12 ps-4 mb-3" style="display:flex;flex-wrap:wrap;justify-content:flex-start">
      {{#each comments.rows}}
      <div class="m-1">
        <a href="/restaurants/{{this.Restaurant.id}}">
          <img src="{{this.Restaurant.image}}" width="80" height="80">
        </a>
      </div>
      {{/each}}
    </div>
  </div>
</div>