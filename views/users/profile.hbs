<div class=" container">
  <div class=" card flex-row shadow-sm d-flex">

      <div class="col-md-4">
        <img class="img-responsive center-block mb-5" src="{{#if user.image}}{{user.image}}
{{else}}https://secure.gravatar.com/avatar/12122a41f5e1d5f75d7b0aaf67199e7e?s=300&d=mm&r=g{{/if}}"
          style="width: 400px; transition: opacity 0.5s; opacity:0;" onload="this.style.opacity=1;">
      </div>
      <div class="m-5">
        <h3>{{user.name}}</h3>
        <p>{{user.email}}</p>
        <p class="mt-3"><strong>{{user.Comments.length}}</strong> 已評論餐廳</p>
        <a href="/users/{{user.id}}/edit" class="btn btn-primary mt-5">edit</a>
        <a class="btn btn-outline-secondary mt-5" href="/">Back</a>
      </div>
    </div>

</div>

<div class="card mt-3">
  <div class="card-header">
    {{#if user.Comments.length}}{{user.Comments.length}}{{else}}0{{/if}}間已評論餐廳
  </div>
  <div class="card-body">
    {{#each user.Comments}}
    <a href="/restaurants/{{this.Restaurant.id}}" title="{{this.Restaurant.name}}">
      <img src="{{this.Restaurant.image}}" width="60" height="60" class="avatar m-2"
        style="transition: opacity 0.5s; opacity:0;" onload="this.style.opacity=1;"></a>
    {{/each}}
  </div>
</div>
