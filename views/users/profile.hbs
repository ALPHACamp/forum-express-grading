<div class="row bg-white py-3">
  <div class="col-4">
    <img
      src="{{#if user.image}}{{user.image}}{{else}}https://i.pinimg.com/originals/f1/0f/f7/f10ff70a7155e5ab666bcdd1b45b726d.jpg{{/if}}"
      alt="user avatar" style="height:250px; width:250px; object-fit:cover;border-radius:50%">
  </div>
  <div class="col-8">
    <h5>{{user.name}}</h5>
    <p>{{user.email}}</p>
    <a href="/users/{{user.id}}/edit" class="btn btn-primary">Edit</a>
  </div>
  <div class="mt-4">
    <div class="card-header">
      <p class="mt-3"><strong>{{comments.length}}</strong> 已評論餐廳 </p>
    </div>
    <div class="card-body bg-white d-flex flex-row flex-wrap">
      {{#if comments.length}}
      {{#each comments}}
      <a href="/restaurants/{{this.restaurantId}}" alt="{{this.Restaurant.name}}">
        <img class="rounded m-2" src="{{this.Restaurant.image}}" width="80px" height="80px"
          title="{{this.Restaurant.name}}">
      </a>
      {{/each}}
      {{else}}
      <h5>尚未評論餐廳</h5>
      {{/if}}
    </div>
  </div>
</div>