<div class="row">
    <div class="col-md-4">
        <img class="img-responsive center-block img-circle" src="{{user.image}}"
            style="width: 250px; margin-bottom: 25px; transition: opacity 0.5s; opacity:0;"
            onload="this.style.opacity=1;">
    </div>
    <div class="col-md-8">
        <p><strong>{{user.name}}</strong></p>
        <p>{{user.email}}</p>
        <p>{{comments.length}} 已評論餐廳</p>
        <br>
        <a class="btn btn-outline-primary" href="/users/{{user.id}}/edit">Edit</a>
    </div>
    <hr>
</div>
<div class="card">
    <div class="card-header">
        <h3>{{comments.length}} 已評論餐廳</h3>
    </div>
    <div class="card-body d-flex flex-wrap flex-row">
        {{#if comments.length}}
        {{#each comments}}
        <a href="/restaurants/{{this.restaurant_id}}">
            <img src="{{this.Restaurant.image}}" alt="{{this.Restaurant.name}}" class="img-fluid rounded-start m-2"
                style="height: 75px; width: 75px;">
        </a>
        {{/each}}
        {{else}}
        <h3>尚未評論餐廳</h3>
        {{/if}}
    </div>
</div>