<div class="card">
  <div class="row g-0 text-center d-flex align-items-center">
    <div class="col-md-4">
      <img class="card-img-top" src="{{user.image}}" alt="user image">
    </div>
    <div class="col-md-8">
      <div class="card-body">
        <h5 class="card-title"><strong>Name:</strong>{{user.name}}</h5>
        <p class="card-text"><strong>Email:</strong>{{user.email}}</p>
        <p><strong>{{user.Comments.length}}已評論餐廳</strong></p>
        <a href="/users/{{user.id}}/edit"><button type="button" class="btn btn-primary">edit</button></a>
      </div>
    </div>
  </div>
</div>
<div class="card">
  <div class="card-header">
    <b>{{user.Comments.length}}已評論餐廳</b>
  </div>
  <div class="card-body">
    {{#each user.Comments}}
    <a href="/restaurants/{{this.Restaurant.id}}"><img src="{{this.Restaurant.image}}" alt="" width="10%"
        height="10%"></a>
    {{/each}}
  </div>
</div>