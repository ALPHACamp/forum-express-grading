<div class="card mb-3">
  <div class="row no-gutters">
    <div class="col-md-4">
      {{#if user.image}}
      <img src="{{user.image}}" width="300px" height="300px" style="transition: opacity 0.5s; opacity:0;"
        onload="this.style.opacity=1;" alt="Profile_image">
      {{else}}
      <img src="https://img95.699pic.com/element/40205/0961.png_300.png" width="300px" height="300px"
        style="transition: opacity 0.5s; opacity:0;" onload="this.style.opacity=1;" alt="Profile_image">
      {{/if}}
    </div>
    <div class="col-md-8">
      <div class="card-body">
        <h5 class="card-title">{{user.name}}</h5>
        <p class="card-text">
          {{user.email}}
        </p>
        <ul class="list-unstyled list-inline">
          <li><strong>{{user.Comments.length}}</strong> 已評論餐廳</li>
        </ul>
        <p>
          {{#ifCond user.id currentUser.id}}
          <a href="/users/{{user.id}}/edit" class="btn btn-primary mx-1">Edit</a>
          {{else}}
          <a href="javascript:history.back()" class="btn btn-outline-secondary mx-1">Back</a>
          {{/ifCond}}
        </p>
      </div>
    </div>
  </div>
</div>

<div class="row">
  <div class="col-md-12">
    <br />
    <div class="card">
      <div class="card-header">
        <strong>{{user.Comments.length}}</strong> 已評論餐廳
      </div>
      <div class="card-body">
        {{#each user.Comments}}
        <a href="/restaurants/{{this.Restaurant.id}}" class="text-decoration-none">
          <img src="{{this.Restaurant.image}}" width="60" height="60" class="avatar" style="transition: opacity 0.5s; opacity:0;"
            onload="this.style.opacity=1;" />
        </a>
        {{/each}}
      </div>
    </div>
  </div>
</div>