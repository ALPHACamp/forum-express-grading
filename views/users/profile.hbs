<div class="row mb-5">
  <div class="col-md-12">
    <h1>{{user.name}}</h1>
  </div>
  <div class="col-md-4">
    <img
      class="img-responsive center-block mb-5"
      src="{{user.image}}"
      style="width: 250px; transition: opacity 0.5s; opacity:0;"
      onload="this.style.opacity=1;"
    />
  </div>
  <div class="col-md-8">
    <div class="well">
      <ul class="list-unstyled">
        <li><strong>Email:</strong> {{user.email}}</li>
      </ul>
    </div>
  </div>
  <a class="btn btn-primary" href="/users/{{user.id}}/edit">編輯</a>
  <hr />
</div>
<!-- Commented Restaurants Section -->
<div class="row mb-5">
  <div class="col-md-12">
    <h2>評論過的餐廳</h2>
  </div>
  {{#each user.commentedRestaurants}}
    <div class="col-md-3">
      <a href="/restaurants/{{this.id}}">
        <img
          class="img-responsive center-block mb-5"
          src="{{this.image}}"
          style="width: 150px; transition: opacity 0.5s; opacity:0;"
          onload="this.style.opacity=1;"
        />
      </a>
    </div>
  {{/each}}
</div>