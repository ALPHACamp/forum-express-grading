<div class="card mb-3 " style="max-width: 100%;">
  <div class="row g-0">
    <div class="col-md-4">
      <img src="{{user.image}}" class="img-fluid rounded-start">
    </div>
    <div class="col-md-8">
      <div class="card-body">
        <h5 class="card-title">{{user.name}}</h5>
        <p class="card-text mb-5">{{user.email}}</p>
        {{#if editPermission}}
        <a class="btn btn-primary" href="/users/{{user.id}}/edit">edit</a>
        {{/if}}
      </div>
    </div>
  </div>
</div>