<div class="row mb-5">
  <div class="col-md-4">
    <img class="img-responsive center-block mb-5" src="{{user.image}}"
      style="width: 250px; transition: opacity 0.5s; opacity:0;" onload="this.style.opacity=1;">
  </div>
  <div class="col-md-4">
    <h1>{{user.name}}</h1>
    <P>{{user.email}}</P>
    <button type="button" class="btn btn-link">
      <a class="btn btn-primary" href="/users/{{user.id}}/edit">
        Edit
      </a>
    </button>
    <a class="btn btn-outline-secondary" href="javascript:history.back()">Back</a>
  </div>
  <hr>

  <div class="col-md-12 card">
    <div class="card-header">
      已經評論了{{restaurantNum}}家餐廳
    </div>
    <div class="card-body d-flex-inline">
      {{#if restaurantNum}}
      {{#each restaurants}}
      <a href="/restaurants/{{this.id}}">
        <img src="{{this.image}}" alt="#" style="max-width: 5rem;">
      </a>
      {{/each}}
      {{else}}
      <p>尚未評論</p>
      {{/if}}
    </div>
  </div>

</div>