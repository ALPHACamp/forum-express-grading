<div class="container">
  <div class="card">
    <div class="row no-gutters">
      <div class="col-md-4">
        <img src={{user.image}} class="card-img" alt="Avatar">
      </div>
      <div class="col-md-8">
        <div class="card-body">
          <h2 class="card-title">{{user.name}}</h2>
          <p class="card-text">{{user.email}}</p>
          <a href="/users/{{user.id}}/edit" class="btn btn-secondary">Edit</a>
        </div>
      </div>
    </div>
  </div>
</div>