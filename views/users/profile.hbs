<div class="row mb-5">
  <div class="col-md-3">
    <img class="img-responsive center-block mb-5" src="{{user.image}}" style="width: 250px; transition: opacity 0.5s; opacity:0;" onload="this.style.opacity=1;">
  </div>
  <div class="col-md-8">
    <h1>{{user.name}}</h1>
    <p>{{user.email}}</p>

    {{#if user.isAdmin}}
      <p>權限：管理員</p>
    {{else}}
      <p>權限：使用者</p> 
    {{/if}}

    {{#if user.isUser}}
      <a class="btn btn-primary" href="/users/{{user.id}}/edit">編輯資料</a>
    {{/if}}
      <a class="btn btn-outline-secondary" href="javascript:history.back()">Back</a>
      <br />
      <br />
  </div>
  <hr>
</div>