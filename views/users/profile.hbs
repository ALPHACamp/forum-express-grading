<div class="row">
  <div class="col-md-4 align-self-center">
    <img src="{{user.image}}" class="img-fluid rounded-start" alt="avatar">
  </div>
  <div class="col-md-8">
    <div class="well">
      <ul class="list-unstyled">
        <li class="mb-3 fs-2">
          <strong>{{user.name}}</strong>
        </li>
        <li class="mb-5">
          <strong>{{user.email}}</strong>
        </li>
        <li class="mb-1">
          <p>已評論<strong>{{ user.Comments.length }}</strong>間餐廳</p>
        </li>
      </ul>
    </div>
    <div class="d-flex">
      {{#ifCond user.id user.id}}
      <a class="btn btn-primary mx-1" href="/users/{{user.id}}/edit">
        Edit
      </a>
      {{else}}
      <a class="btn btn-outline-secondary mx-1" href="javascript:history.back()">
        Back
      </a>
      {{/ifCond}}
    </div>
  </div>
</div>
<div class="card">
  <h5 class="card-header">已留下評論的餐廳</h5>
  <div class="card-body row">
    {{#each user.Comments}}
        <a href="/restaurants/{{this.restaurantId}}" class="col-auto">
            <img src="{{this.Restaurant.image}}" alt="restaurant image" width="50px" height="50px">
        </a>
    {{/each}}
  </div>
</div>
