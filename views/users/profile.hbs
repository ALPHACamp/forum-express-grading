<div class="container">
  <div class="row">
    <div class="col-sm-4">
      {{#if user.image }}
      <img class="img-responsive center-block" src="{{ user.image }}"
        style="width: 250px; margin-bottom: 25px; transition: opacity 0.5s; opacity:0;" onload="this.style.opacity=1;">
      {{else}}
      <img class="img-responsive center-block"
        src="https://static.vecteezy.com/system/resources/previews/008/442/086/non_2x/illustration-of-human-icon-user-symbol-icon-modern-design-on-blank-background-free-vector.jpg"
        style="width: 250px; margin-bottom: 25px; transition: opacity 0.5s; opacity:0;" onload="this.style.opacity=1;">
      {{/if}}
    </div>
    <div class="col-sm-8">
      <h1>{{ user.name }}</h1>
      <p>{{ user.email }}</p>

      <a href="/users/{{user.id}}/edit">
        <button class="btn btn-primary">
          edit
        </button>
      </a>
    </div>
    <hr>
    <div class="card my-4">
      <div class="card-header">
        <h5 class="card-title">{{user.Comments.length}} 已評論餐廳</h5>
      </div>
      <div class="card-body">
        <div class="row row-cols-md-12 g-4 ">
          {{#each user.Comments}}
          <div class="col-2">
            <div class="card">
              <a href="/restaurants/{{this.Restaurant.id}}">
                <img class="img-fluid" src="{{this.Restaurant.image}}" alt="restaurant image">
              </a>
            </div>
          </div>
          {{/each}}
        </div>
      </div>
    </div>
  </div>