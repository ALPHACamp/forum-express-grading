<div class="row mb-5">
  <div class="col-md-4">
    <img class="img-responsive center-block mb-5" src="{{user.image}}"
      style="width: 250px; transition: opacity 0.5s; opacity:0;" onload="this.style.opacity=1;">
  </div>
  <div class="col-md-8">
    <h4>{{user.name}}</h4>
    <p style="white-space: break-spaces;">{{user.email}}</p>
    <a href='/users/{{user.id}}/edit'>
      <button type="button" class="btn btn-primary">Edit</button>
    </a>
  </div>
</div>
<div class="card">
  <div class="card-header">
    <p>已評論過{{user.commentsCount}}次</p>
  </div>
  <div class="class-body">
    <div class="col-md-4 d-flex align-items-center">
      {{#each user.Comments}}
      <div class="card mb-2">
        <a href="/restaurants/{{this.Restaurant.id}}">
          <img class="img-fluid me-2" src="{{this.Restaurant.image}}" alt="">
        </a>
      </div>
      {{/each}}
    </div>
  </div>
</div>