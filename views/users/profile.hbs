<div class="d-flex justify-content-center">
  <div class="card mb-3 col-10">
    <div class="row g-0">
      <div class="col-md-4">
        <img
          src="{{#if user.image}}{{user.image}}{{else}}https://inews.gtimg.com/newsapp_bt/0/14664808285/1000.jpg{{/if}}"
          class="rounded-circle mt-3 ms-3 mb-3" height="320px" width="320px">
      </div>
      <div class="col-md-8">
        <div class="card-body">
          <h5 class="card-title">{{user.name}}</h5>
          <p class="card-text">{{user.email}}</p>
          <a href="/users/{{user.id}}/edit" class="btn btn-primary">Edit</a>
        </div>
      </div>
    </div>
  </div>
</div>