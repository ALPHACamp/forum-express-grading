<div class="card mb-3">
  <div class="row g-0">
    <div class="col-md-4">
      <img src="{{ user.image }}" class="img-fluid rounded-start" alt="user avatar">
    </div>
    <div class="col-md-8">
      <div class="card-body">
        <h5 class="card-title">{{ user.name }}</h5>
        <p class="card-text">{{ user.email }}</p>
        <p class="card-text">
          <strong>{{user.Comments.length}}</strong> 已評論餐廳
        </p>
        <a href="/users/{{ user.id }}/edit" class="btn btn-primary">edit</a>
      </div>
    </div>
  </div>
</div>

<div class="card">
  <div class="card-header">
    <strong>{{user.Comments.length}}</strong> 已評論餐廳
  </div>
  <div class="card-body d-flex flex-wrap">
    {{#if user.Comments}}
      {{#each user.Comments}}
      <div class="m-1">
        <a href="/restaurants/{{this.Restaurant.id}}">
          <img src="{{this.Restaurant.image}}" width="120px">
        </a>
      </div>
      {{/each}}
    {{else}}
    <p>此使用者還沒有評論</p>
    {{/if}}
  </div>
</div>