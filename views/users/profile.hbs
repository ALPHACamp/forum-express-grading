<div class="row mb-5">
  <div class="col-md-4">
    <img class="img-responsive center-block mb-5" src="{{user.image}}"
      style="width: 250px; transition: opacity 0.5s; opacity:0;" onload="this.style.opacity=1;">
  </div>
  <div class="col-md-8">
    <div class="card-body">
      <h2>{{user.name}}</h2>
      <h3>{{user.email}}</h3>
      <a class="btn btn-primary" href="/users/{{user.id}}/edit">edit</a>
      <a class="btn btn-outline-secondary" href="javascript:history.back()">Back</a>
    </div>
  </div>
  <hr>
</div>
{{!-- 使用者評論過的餐廳 --}}
<hr>

<div class="row">
  <p>{{user.Comments.length}}已評論餐廳</p>
  {{#each user.Comments}}
  <div class="col-md-3" style="width: 150px;">
    <div class="card mb-4">
      <a href="/restaurants/{{this.Restaurant.id}}">
        <img class="card-img-top img-fluid" src="{{this.Restaurant.image}}" alt="Card image cap">
      </a>
    </div>
  </div>
  {{/each}}
</div>