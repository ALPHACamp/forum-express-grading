<div class="container">
  <div class="row mb-5">
    <div class="col-md-5">
      <img class="rounded-circle" src="{{user.image}}"
        style="width: 30vw; height: 30vw; transition: opacity 0.5s; opacity:0;" onload="this.style.opacity=1;">
    </div>
    <div class="col-md-7">
      <h1 class="mt-5">{{user.name}}</h1>
      <p>{{user.email}}</p>
      {{#ifCond user.id loginUser.id}}
      <a href="/users/{{user.id}}/edit"><button class="btn btn-primary my-sm-0 my-2">Edit</button></a>
      {{/ifCond}}
    </div>
    <hr class="mt-5">
  </div>
</div>