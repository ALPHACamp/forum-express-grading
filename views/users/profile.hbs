<div class='row'>
  <div class='card'>
    <div class='card-body d-flex'>
      <div class='col-md-4'>
        <img
          class='img-responsive card-image-left'
          src='{{userProfile.image}}'
          style='width: 300px; height:300px margin-bottom: 25px; transition: opacity 0.5s; opacity:0; display:inline'
          onload='this.style.opacity=1;'
        />
      </div>
      <div class='col-md-8'>
        <h4>{{userProfile.name}}</h4>
        <p>{{userProfile.email}}</p>
        <div class='mt-5'>
        {{#ifCond userProfile.id user.id}}
          <a
            class='btn btn-primary'
            href='/users/{{user.id}}/edit'
          >Edit</a></div>
        {{/ifCond}}
      </div>
      <div class='col-md-8'>
        <p style='white-space: break-spaces;'>{{restaurant.description}}</p>
      </div>
    </div>
  </div>
</div>