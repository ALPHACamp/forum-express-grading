<div class="row mb-5">
  <img class="img-responsive center-block" src="{{user.image}}" style="width: 250px; margin-bottom: 25px; transition: opacity 0.5s; opacity:0;" onload="this.style.opacity=1;">
  <div class="col-md-12">
    <h1>{{user.name}}</h1>
    <p>{{user.email}}</p>
  </div>
  <a href="/users/{{user.id}}/edit"><button class="btn btn-primary">Edit</button></a>
</div>

<!--comments-->
<div class="container overflow-auto"> 
  {{#each user.Comments}}
  <a href="/restaurants/{{this.Restaurant.id}}">
    <img src="{{this.Restaurant.image}}" style="max-height:75px">
  </a>
  {{/each}}
</div>

