<div class="row mt-5 border container">
  <div class="col-4">
    <img src="{{user.image}}" alt="your avatar" style="width: 100%;">
  </div>
  <div class="col-8">
    <h1 class="mt-3"><strong>{{user.name}}</strong></h1>
    <h3 class="mt-3">{{user.email}}</h3>
    <a href="/users/{{user.id}}/edit" class="btn btn-info">edit</a>
  </div>
</div>

{{!-- 顯示已評論的餐廳 --}}
<div class="border mt-3">
  <div class="border p-2">
    <h3>{{comments.count}} 間已評論餐廳</h3>
  </div>
  <div class="d-flex row">
    {{#each comments.rows}}
    <div class="col-1 m-3">
      <a href="/restaurants/{{this.Restaurant.id}}">
        <img src="{{this.Restaurant.image}}" alt="" style="max-width: 100px;">
      </a>
    </div>
    {{/each}}
  </div>
</div>
{{!-- 顯示已評論的餐廳 end --}}