<div class="row mb-2">
    <h1>Profile</h1>
    <hr>
    <div class="col-md-4">
        <img class="img-responsive center-block mb-3" src="{{user.image}}" style="width: 300px; height: 350px">
    </div>
    <div class="col-md-8 d-flex justify-content-between">
        <div>
            <ul class="list-unstyled">
                <li>
                    <h5><strong>{{user.name}}</strong></h5>
                </li>
                <p></p>
                <li>{{user.email}}</li>
            </ul>
        </div>
        <div>
            <a class="btn btn-primary" style="width: 100px; height: 35px" href="/users/{{user.id}}/edit">
                Edit
            </a>
        </div>
    </div>
</div>
<hr>