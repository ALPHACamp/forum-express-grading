<div class="card mb-3" style="max-width: 600px;">
  <div class="row g-0">
    <div class="col-md-4">
      <img {{#if user.image}}
            src="{{user.image}}"
          {{else}}
            src="https://via.placeholder.com/600/000000/FFFFFF/?text=No update your pic"
          {{/if}} class="img-fluid rounded-start" alt="user-image">
    </div>
    <div class="col-md-8">
      <div class="card-body">
        <h5 class="card-title">{{user.name}}</h5>
        <p class="card-text">{{user.email}}</p>
        <p>已評論餐廳</p>
        <a href="/users/{{user.id}}/edit" class="btn btn-primary">edit</a>
      </div>
    </div>
  </div>
</div>

