<div class="container">
  <div class="card d-flex flex-wrap flex-row p-0">
    <div>
      {{#if profile.image}}
      <img src="{{ profile.image }}" alt="avatar" class="rounded-circle m-3"
        style="object-fit:cover;height:300px; width:300px">
      {{else}}
      <img src="https://i.pinimg.com/originals/f1/0f/f7/f10ff70a7155e5ab666bcdd1b45b726d.jpg" alt="avatar"
        class="rounded-circle m-3" style="object-fit:cover;height:200px; width:200px">
      {{/if}}
    </div>
    <div class="m-5" style="width:300px">
      <h5>{{ profile.name }}</h5>
      <p class="mt-3">{{profile.email}}</p>
      {{#ifCond profile.id user.id}}
      <a href="/users/{{user.id}}/edit" class="btn btn-primary">edit</a>
      {{/ifCond}}
    </div>
  </div>
</div>