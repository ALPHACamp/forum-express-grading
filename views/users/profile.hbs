<div class="card mb-5">
  <div class="row">
    <div class="col-md-4">
      <img class="img-responsive center-block" src="{{noImage user.image}}" style="transition: opacity 0.5s; opacity:0;" onload="this.style.opacity=1;">
    </div>
    <div class="col-md-8">
      <div class="card-body">
        <h5 class="card-title">{{user.name}}</h5>
        <p class="card-text">{{user.email}}</p>
        {{#ifCond user.id current_user.id}}
        <a class="btn btn-primary" href="/users/{{user.id}}/edit">Edit</a>
        {{/ifCond}}
      </div>
    </div>
  </div>
</div>