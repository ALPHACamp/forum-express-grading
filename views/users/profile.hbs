<div class="card mb-3" style="max-width: 800;">
  <div class="row g-0">
    <div class="col-md-4">
      <img class="img-responsive center-block" src="{{this.image}}" style="width: 250px; margin-bottom: 25px; transition: opacity 0.5s; opacity:0;" onload="this.style.opacity=1;">
    </div>
    <div class="col-md-8">
      <div class="card-body">
        <h5 class="card-title">{{this.name}}</h5>
        <p class="card-text">{{this.email}}</p>
        <a href="/users/{{this.id}}/edit" type="button" class="btn btn-primary">Edit</a>
      </div>
    </div>
  </div>
</div>