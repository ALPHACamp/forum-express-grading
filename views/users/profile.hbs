<div class='mx-auto' style='max-width: 960px;'>
  <div class='card mb-5 mt-4'>
    <div class='row g-0'>
      <div class='col-md-4'>
        <img
          src='{{user.image}}'
          class='img-fluid rounded-start'
          style='width:100%; height:100%; '
          alt='Profile_image'
        />
      </div>
      <div class='col-md-8 ps-5 pt-4'>
        <div class='card-body'>
          <h2 class='card-title'>{{user.name}}</h2>
          <p class='card-text mt-4'>{{user.email}}</p>
          <a
            class='btn btn-primary mt-4'
            href='/users/{{user.id}}/edit'
          >edit</a>
        </div>
      </div>
    </div>
  </div>

  <div class='card md-8'>
    <div class='card'>
      <div class="card-header">
      <strong>已評論過的餐廳：{{user.Comments.length}}</strong>
      </div>
      <div class="card-body">
        {{#each user.Comments}}
          <a href="/restaurants/{{this.Restaurant.id}}" class="text-decoration-none">
            <img src="{{this.Restaurant.image}}" width="60" height="avatar" style="transition: opacity 0.5s; opacity:0;" onload="this.style.opacity=1;" /> 
          </a>
          {{/each}}
      </div>
    </div>
  </div>
</div>