<div class="card mb-3" style="max-width: 1200px;">
  <div class="row g-0">

    <div class="col-md-4">
      <img class="img-fluid rounded-start" style="width: 250px; transition: opacity 0.5s; opacity:0;"
        onload="this.style.opacity=1;"
        src="{{#if user.image}}{{user.image}}{{else}}https://i.pinimg.com/736x/f1/0f/f7/f10ff70a7155e5ab666bcdd1b45b726d.jpg{{/if}}">
    </div>
    <div class="col-md-8">
      <div class="card-body">
        <h2>{{user.name}}</h2>
        <p style="white-space: break-spaces">{{user.email}}</p>
        <p style="white-space: break-spaces">5 已評論餐廳</p>
        <a class="btn btn btn-primary" href="/users/{{user.id}}/edit">Edit</a>
        <a class="btn btn-outline-secondary" href="javascript:history.back()">Back</a>
      </div>
    </div>
  </div>
</div>

