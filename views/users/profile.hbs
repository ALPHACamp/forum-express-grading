<div class="row mb-5">
  <img class="img-responsive center-block mb-5" src="{{user.image}}"
    style="width: 250px; transition: opacity 0.5s; opacity:0;" onload="this.style.opacity=1;">

  <div class="col-md-4 mt-5">
    <h1>{{user.name}}</h1>
    <p>{{user.email}}</p>
    <div class="'col-md-4">
      <a class="btn btn-primary" href="/users/{{user.id}}/edit">Edit</a>
    </div>
  </div>
  <hr>
<div class="card">
  <div class="card-header">
    {{user.Comments.length}}已評論餐廳
  </div>
  <div class="card-body">
    {{#each user.Comments}}
      <a class='mt-5' href="/restaurants/{{this.Restaurant.id}}">
        <img src="{{this.Restaurant.image}}" alt="Card image cap" style="width:80px;height:80px;">
      </a>
    {{/each}}
  </div>
</div>

