<div class="row">
  <div class="col-md-4">
    <img class="img-responsive center-block" src="{{#ifCond user.image null}}https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcQIMvAjdZvqtqQX16U9q2yJPLgWmVFd9bjOjw&usqp=CAU{{/ifCond}}{{user.image}}"
      style="width: 250px; margin-bottom: 25px; transition: opacity 0.5s; opacity:0;" onload="this.style.opacity=1;">
  </div>
  <div class="col-md-8">
    <h1>Name : {{user.name}}</h1>
    <h1>Email : {{user.email}}</h1>
      <a href='/users/{{user.id}}/edit'>
        <button type="button" class="btn btn-primary">edit</button>
      </a>
  </div>
  <hr>
</div>
<div class="col-md-7 my-2">
  <div class="card">
    <div class="card-header">
      {{user.Comments.length}} 已評論餐廳
    </div>
    <div class="row">
          {{#each user.Comments}}
          <div class="col-md-2 m-1">
            <a href="/restaurants/{{this.Restaurant.id}}">
              <img class="card-img-top img-fluid" src="{{this.Restaurant.image}}" width="286px" height="286px"
                style="transition: opacity 0.5s; opacity:0;" onload="this.style.opacity=1;">
            </a>
          </div>
          {{/each}}
      </div>
    </div>
  </div>
</div>
<a class="btn btn-outline-secondary" href="javascript:history.back()">Back</a>