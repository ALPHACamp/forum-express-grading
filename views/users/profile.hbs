<div class="card mb-3 mx-auto" style="max-width: 80%;">
  <div class="row g-0">
    <div class="col-md-4">
      <img src="{{user.image}}" class="img-fluid rounded-start" alt="...">
    </div>
    <div class="col-md-8">
      <div class="card-body">

        <h5>{{user.name}}</h5>
        <p>{{user.email}}</p>
        <a href="/users/{{user.id}}/edit" class="btn btn-primary">edit</a>

      </div>
    </div>
  </div>
</div>
<div class="card mb-3 mx-auto" style="max-width: 80%;">
  <div class="card-header">
    <strong>{{#length user.Comments}}{{/length}} </strong>已評論餐廳
  </div>
  <div class="card-body d-flex">
    {{#each user.Comments}}
    <a href="/restaurants/{{this.Restaurant.id}}">
      {{#if this.Restaurant.image}}
      <img src="{{this.Restaurant.image}}" width="40px" height="40px"
        style="transition: opacity 0.5s; opacity:0; margin-right:2px;" onload="this.style.opacity=1;" />
      {{else}}
      <img src="https://fakeimg.pl/40x40/" width="40px" height="40px" style="margin-right:2px;" />
      {{/if}}</a>
    {{/each }}
  </div>