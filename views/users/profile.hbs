<div class="card mb-3 mx-auto" style="max-width: 80%;">
  <div class="row g-0">
    <div class="col-md-6">
      <img src="{{user.image}}" class="m-3" width="300px">
    </div>
    <div class="col-md-6">
      <div class="card-body">

        <h5>{{user.name}}</h5>
        <p>{{user.email}}</p>
				{{#ifCond UserId user_id}}
        <a href="/users/{{user.id}}/edit" class="btn btn-primary">edit</a>
				{{/ifCond}}

      </div>
			
    </div>
  </div>
	
	<div class="row mt-3">
		<h5 class="m-1">{{user.Comments.length}} Comments on Restaurants</h5>
		<!-- commented restaurants -->
		{{#if user.Comments}}
		{{#each user.Comments}}
		<div class="col">
			<a href="/restaurants/{{this.Restaurant.id}}">
				<img src="{{this.Restaurant.image}}" class="p-2" width="150px"">
			</a>
		</div>
		{{/each}}
		{{else}}
	<h6 class="m-2">No Comments Yet!</h6>
	{{/if}}
	</div>
</div>