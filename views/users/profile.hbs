<div class="container mx-auto">
  <div class="card mb-3">
    <div class="row g-0">
      <div class="col-md-4">
        <img src="{{user.image}}" class="img-fluid rounded-start" alt="user-image" onload="this.style.opacity=1;">
      </div>
      <div class="col-md-6">
        <div class="card-body">
          <h5 class="card-title">{{user.name}}</h5>
          <p class="card-text">{{user.email}}</p>
          {{#if editPermission}}
          <a class="edit-user btn btn-primary" href="/users/{{user.id}}/edit">edit</a>
          {{/if}}
        </div>
      </div>
    </div>
  </div>
</div>
