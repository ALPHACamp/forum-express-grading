<div class="row">
    <div class="col-md-4">
        <img class="img-responsive center-block img-circle" src="{{user.image}}"
            style="width: 250px; margin-bottom: 25px; transition: opacity 0.5s; opacity:0;"
            onload="this.style.opacity=1;">
    </div>
    <div class="col-md-8">
        <p><strong>{{user.name}}</strong></p>
        <p>{{user.email}}</p>
        <br>
        <a class="btn btn-outline-primary" href="/users/{{user.id}}/edit">Edit</a>
    </div>
    <hr>
</div>