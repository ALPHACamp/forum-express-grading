<div class="card">
  <div class="row">
    <div class="col-md-4 d-flex justify-content-center">
      <img src="{{user.image}}" class="rounded-circle" alt="avatar" width="340px" height="340px"
        style="object-fit:cover ; transition: opacity 0.5s; opacity:0;" onload="this.style.opacity=1;">
    </div>
    <div class="col-md-8 mt-3">
      <h3>{{user.name}}</h3>
      <h5>{{user.email}}</h5>

      <a class="btn btn-primary btn-sm mt-2" href="/users/{{user.id}}/edit" role="button">edit</a>

    </div>
  </div>