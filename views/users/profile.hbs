<div class="card mb-3">
  <div class="row g-0">
    <div class="col-md-4">
      <img src="{{user.image}}" class="img-fluid rounded-start" alt="image">
    </div>
    <div class="col-md-8">
      <div class="card-body">
        <h5 class="card-title">{{user.name}}</h5>
        <p class="card-text">{{user.email}}</p>
        {{#if user.editable}}
        <a class="btn btn-primary" href="/users/{{user.id}}/edit" role="button">Edit</a>
        {{/if}}
      </div>
    </div>
  </div>
</div>