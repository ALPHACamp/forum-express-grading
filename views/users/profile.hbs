<div class="row mb-5">
  <div class="col-md-4">
    <img class="img-responsive center-block mb-5" src="{{user.image}}" style="width: 250px; transition: opacity 0.5s; opacity:0;"
      onload="this.style.opacity=1;">
  </div>
  <div class="col-md-4">
    <h1>{{user.name}}</h1>
    <P>{{user.email}}</P>
    <button type="button" class="btn btn-link">
      <a class="btn btn-primary" href="/users/{{user.id}}/edit">
        Edit
      </a>
    </button>
    <a class="btn btn-outline-secondary" href="javascript:history.back()">Back</a>
  </div>

</div>