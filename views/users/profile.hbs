<div class="card p-4 shadow-sm">
  <div class="row">
    <div class="col-6">
      <img class="img-responsive center-block" src="{{user.image}}" 
        style="width: 100%; transition: opacity 0.5s; opacity:0;" onload="this.style.opacity=1;" onerror="this.onerror=null;this.src='/image/no-image.png';">
    </div>
    <div class="col-6">
      <h3>{{user.name}}</h3>
      <p>{{user.email}}</p>
      <a href="/users/{{user.id}}/edit">
        <button type="button" class="btn btn-primary">Edit</button>
      </a>
    </div>
  </div>