<div class="card mb-3">
  <div class="row g-0">
    <div class="col-md-4">
      <img src="{{user.imagePath}}" class="img-fluid rounded-start" alt="...">
    </div>
    <div class="col-md-8">
      <div class="card-body">
        <h5 class="card-title fw-bold">{{user.name}}</h5>
        <p class="card-text">{{user.email}}</p>
        <p class="card-text fw-bold">{{comments.count.length}} 已評論餐廳</p>
        <a href="/users/{{user.id}}/edit" class="btn btn-primary">Edit</a>
      </div>
    </div>
  </div>
</div>

<div class="card">
  <h5 class="card-header fw-bold">{{comments.count.length}} 已評論餐廳</h5>
  <div class="card-body d-flex flex-row flex-wrap bd-highlight mb-3 p-0">
    {{#if comments.rows}}
    {{#each comments.rows}}
    <a href="/restaurants/{{this.Restaurant.id}}">
      <div class="card m-3" style="width: 14rem;">
        <img src="{{this.Restaurant.image}}" class="card-img-top" alt="...">
        <div class="card-body">
          <p class="card-text">{{this.Restaurant.name}}
          </p>
        </div>
      </div>
    </a>
    {{/each}}
    {{else}}
    <p class="m-3">尚無評論之餐廳</p>
    {{/if}}
  </div>
</div>