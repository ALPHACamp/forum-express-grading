<div class="card mb-3">
  <div class="row g-0">
    <div class="col-md-4">
      <img src="{{#if user.image}}{{user.image}}
{{else}}https://secure.gravatar.com/avatar/12122a41f5e1d5f75d7b0aaf67199e7e?s=300&d=mm&r=g{{/if}}" class="img-fluid"
        style="border-radius:50%; width:300px; height:300px" alt="image">
    </div>
    <div class="col-md-8">
      <h3 class="pt-3">{{ user.name }}</h3>
      <p>{{ user.email }}</p>
      {{#ifCond user.id accountId}}<a href="/users/{{user.id}}/edit" type="button"
        class="btn btn-primary">edit</a>{{/ifCond}}
    </div>
  </div>
</div>