<div class="row mb-5">
  <div class="col-md-12">
    <h1>{{user.name}}</h1>
  </div>
  <div class="col-md-12">
    <div class="row">
      <div class="col-md-5">
        <img class="img-responsive center-block mb-5" src="{{user.image}}"
              style="width: 250px; transition: opacity 0.5s; opacity:0;" onload="this.style.opacity=1;">
      </div>
      <div class="col-md-7">
        <div class="well">
          <ul class="list-unstyled">
            <li><strong>Name:</strong> {{user.name}}</li>
            <li><strong>Email:</strong> {{user.email}}</li>
          </ul>
        </div>
        <a class="btn btn-primary" href="/users/{{user.id}}/edit">edit</a>
      </div>
    </div>
  </div>
  <hr>
</div>
{{#if user.Comments}}
<h3 class="mb-3">{{commentedNum}} 已評論餐廳</h3>
{{#each user.Comments}}
<a href="/restaurants/{{this.Restaurant.id}}">
  <img class="img-responsive center-block mb-5" src="{{this.Restaurant.image}}"
    style="width: 100px; transition: opacity 0.5s; opacity:0;" onload="this.style.opacity=1;">
</a>
{{/each}}
{{/if}}