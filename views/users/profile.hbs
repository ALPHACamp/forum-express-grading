<div class="row mb-5">
  <div class="col-md-4">
    <img class="img-responsive center-block mb-5" src="{{user.image}}" style="width: 250px; transition: opacity 0.5s; opacity:0;" onload="this.style.opacity=1;">
    <div class="well">
      <ul class="list-unstyled">
        <li><strong>Name:</strong> {{user.name}}</li>
        <li><strong>Email:</strong> {{user.email}}</li>
        <li><strong>{{user.Comments.length}} 已評論餐廳</strong></li>
      </ul>
      <button type="button" class="btn btn-link">
        <a class="btn btn-primary" href="/users/{{user.id}}/edit">
        Edit My Profile
        </a>
      </button>
    </div>
  </div>
  <hr>
</div>
<div class="row">
  <div class="row"><strong>{{user.Comments.length}} 已評論餐廳</strong> </div>
  <div class="row d-flex">
      {{#each user.Comments}}
      <div class="col-md-2" >
        <div class="card" >
          <a href="/restaurants/{{this.Restaurant.id}}"><img src="{{this.Restaurant.image}}" class="card-img-top" alt="..."></a>
        </div>
      </div>
      {{/each}}
  </div>
</div>