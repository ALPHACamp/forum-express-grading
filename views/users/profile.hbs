<div class="row mb-5">
    <div class="col-md-4">
        <img class="img-responsive center-block mb-5" src="{{user.image}}"
            style="width: 250px; transition: opacity 0.5s; opacity:0;" onload="this.style.opacity=1;">
    </div>
    <div class="col-md-8">
        <h1>{{user.name}}</h1>
        <p>{{user.email}}</p>
        <h4>{{commentCounts}}間 已評論餐廳</h4>
        <h4>{{favoritedCounts}}間 收藏的餐廳</h4>
        <h4>{{followingCounts}} followings（追蹤者）</h4>
        <h4>{{followerCounts}} followers（追隨者）</h4>
        <hr>
        <a class="btn btn-outline-primary" href="/users/{{user.id}}/edit">Edit</a>
    </div>
</div>


<div class="row mb-5">
    <div class="col-md-4">
        <h4>{{followingCounts}} followings（追蹤者）</p>
            {{#each followings}}
            <a href="/users/{{this.id}}">
                <img class="img-responsive center-block mb-5" src="{{this.image}}"
                    style="width: 50px; height: 50px; transition: opacity 0.5s; opacity:0;"
                    onload="this.style.opacity=1;">
            </a>
            {{/each}}
    </div>

    <div class="col-md-4">
        <h4>{{followerCounts}} followers（追隨者）</p>
            {{#each followers}}
            <a href="/users/{{this.id}}">
                <img class="img-responsive center-block mb-5" src="{{this.image}}"
                    style="width: 50px; height: 50px; transition: opacity 0.5s; opacity:0;"
                    onload="this.style.opacity=1;">
            </a>
            {{/each}}
    </div>
</div>

<div class="row mb-5">
    <div class="col-md-4">
        <h4>{{commentCounts}}間 已評論餐廳</p>
            {{#each commentedRestaurants}}
            <a href="/restaurants/{{this.id}}">
                <img class="img-responsive center-block mb-5" src="{{this.image}}"
                    style="width: 50px; height: 50px; transition: opacity 0.5s; opacity:0;"
                    onload="this.style.opacity=1;">
            </a>
            {{/each}}
    </div>

    <div class="col-md-4">
        <h4>{{favoritedCounts}}間 收藏的餐廳</p>
            {{#each favoritedRestaurants}}
            <a href="/restaurants/{{this.id}}">
                <img class="img-responsive center-block mb-5" src="{{this.image}}"
                    style="width: 50px; height: 50px; transition: opacity 0.5s; opacity:0;"
                    onload="this.style.opacity=1;">
            </a>
            {{/each}}
    </div>

</div>