<div class="card mb-3 mx-auto mt-4" style="max-width: 960px;">
  <div class="row g-0">
    <div class="col-md-4">
      {{#if targetUser.image}}
      <img src="{{targetUser.image}}" class="img-fluid rounded-start" style="width:100%; height:100%; "
        alt="Profile_image">
      {{else}}
      <img src="https://res.cloudinary.com/dqfxgtyoi/image/upload/v1644154630/github/defaultAvatar_uapauy.png"
        class="img-fluid rounded-start" style="width:100%; height:100%; " alt="Profile_image">
      {{/if}}
    </div>
    <div class="col-md-8 ps-5 pt-4">
      <div class="card-body">
        <h2 class="card-title">{{targetUser.name}}</h2>
        <p class="card-text mt-4">{{targetUser.email}}</p>
        {{#ifCond targetUser.id user.id}}
        <a class="btn btn-primary" href="/users/{{user.id}}/edit">edit</a>
        {{/ifCond}}
      </div>
    </div>
  </div>
</div>