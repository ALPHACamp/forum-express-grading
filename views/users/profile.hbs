<div class="card mb-3">
  <div class="row g-0">
    <div class="col-md-4">
      <img src="{{user.image}}" class="img-fluid rounded-start" alt="{{user.name}}">
    </div>
    <div class="col-md-8">
      <div class="card-body">
        <h3 class="card-title">{{user.name}}</h3>
        <p class="card-text">{{user.email}}</p>
        <p class="card-text">
          {{count}} 已評論餐廳
        </p>
        {{#ifCond user.id reqUser.id}}<a href="/users/{{user.id}}/edit" class="btn btn-primary">Edit</a>{{/ifCond}}
      </div>
    </div>
  </div>
</div>
<div class="card">
  <h5 class="card-header">
    {{count}} 已評論餐廳
  </h5>
  <div class="card-body d-flex flex-wrap">
    {{#each comments}}
    <a href="/restaurants/{{this.Restaurant.id}}">
      <img src="{{this.Restaurant.image}}" style="max-width: 60px" class="m-1">
    </a>
    {{/each}}
    {{#ifCond count 0}} <p>Oops! 目前這裡空空如也。</p> {{/ifCond}}
  </div>
</div>