<div class="row bg-white border mb-3 p-3">
    <div class="col-4 p-0"><img src="{{ profile.image }}" alt="photo" style="width: 300px;"></div>
    <div class="col-8">
      <h3>{{ profile.name }}</h3>
      <p> {{ profile.email }} </p>
      <p>{{comments.length}} 已評論餐廳</p>
      {{#ifCond user.id profile.id }}
      <a href="/users/{{ user.id }}/edit" class="btn btn-primary">Edit</a>
      {{/ifCond}}
    </div>
  </div>
</div>

<div class="row border p-2">
  <p class="m-0"><strong>{{comments.length}} 已評論餐廳</strong></p>
</div>
<div class="row border p-2  bg-white">
{{#ifCond Comments.length 0}}
<p class="my-3">{{ profile.name }} 尚未評論過任何一間餐廳</p>
{{/ifCond}}

  {{#each comments}}
  <div class="col-2">
    <a href="/restaurants/{{this.Restaurant.id}}"><img class="img-responsive center-block"
        src="{{ this.Restaurant.image }}" style="width: 150px;" alt="photo"></a>
  </div>
  {{/each}}

</div>