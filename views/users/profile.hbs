<div class="card mb-3">
    <div class="row no-gutters">
        <div class="col-md-4">
            <img src="{{user.image}}" width="300px" height="300px" alt="photo" style="border-radius: 50%;">
        </div>
        <div class="col-md-8">
            <div class="card-body">
                <h4 class="card-title">{{user.name}}</h4>
                <p class="card-text">
                    {{user.email}}
                </p>
            </div>
            <a class="btn btn-primary" href="/users/{{user.id}}/edit">edit</a>
        </div>
    </div>
</div>