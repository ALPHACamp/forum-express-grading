<div class="row mt-3">
  <div class="col-md-10 m-auto">
    <div class="card">
      <div class="row">
        <div class="col-md-4">
          {{#if userInfo.image}}
          <img class="card-img-top" style="object-fit:contain;height:150px; width:150px;" src="{{userInfo.image}}">
          {{/if}}
          </div>
          <div class="col-md-8 mt-3">
            <h4>{{userInfo.name}}</h4>
            <h6 class="mt-3 mb-3">{{userInfo.email}}</h6>
            {{#ifCond userInfo.id user.id }}
            <a href="/users/{{userInfo.id}}/edit" class="btn btn-primary">edit</a>
            {{/ifCond}}
            <a class="btn btn-outline-secondary" href="javascript:history.back()">Back</a>
          </div>
          </div>
          </div>
          </div>
          </div>

