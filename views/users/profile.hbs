<div class="card mb-3">
  <div class="row g-0">
    <div class="col-md-4">
      <img src="{{user.image}}" class="img-fluid rounded-start" alt="..." style="height: 450px;">
    </div>
    <div class="col-md-8">
      <div class="card-body">
        <h5 class="card-title">{{user.name}}</h5>
        <p class="card-text">{{user.email}}</p>
        <p>{{comments.length}} 已評論餐廳</p>
        {{#ifCond user.id user.id}}
        <a class="btn btn-primary" href="/users/{{user.id}}/edit">edit</a>
        {{/ifCond}}
      </div>
    </div>
  </div>
</div>

<div class="card">
  <div class="card-header">
    <h3>{{comments.length}} 已評論餐廳</h3>
  </div>
  <div class="card-body d-flex flex-wrap flex-row">
    {{#if comments.length}}
      {{#each comments}}
        <a href="/restaurants/{{this.restaurant_id}}">
          <img src="{{this.Restaurant.image}}" alt="{{this.Restaurant.name}}" class="img-fluid rounded-start m-2" style="height: 75px; width: 75px;">
        </a>
      {{/each}}
    {{else}}
    <h3>尚未評論餐廳</h3>
    {{/if}}
  </div>
</div>