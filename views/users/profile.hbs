<div class="card mb-3">
  <div class="row g-0">
    <div class="col-md-2">
      <img src="{{user.image}}"
           class="img-thumbnail rounded float-start"
           alt="...">
    </div>
    <div class="col-md-8">
      <div class="card-body">
        <h5 class="card-title">{{user.name}}</h5>
        <p class="card-text">{{user.email}}</p>
        <a class="btn btn-primary"
           href="/users/{{user.id}}/edit"
           role="button">edit</a>
      </div>
    </div>
  </div>
</div>