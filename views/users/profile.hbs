<div class='card d-flex flex-row w-75 m-auto' style='width: 18rem;'>
	<img
		class='card-img-top me-3 rounded-circle'
		src='{{User.image}}'
		alt='User avatar'
		style='width: 300px; height: 300px'
	/>
	<div class='card-body d-flex flex-column justify-content-between'>
		<div>
			<h5 class='card-title'>{{User.name}}</h5>
			<p class='card-text'>{{User.email}}</p>
			<p>{{User.numberOfComments}} 已評論餐廳</p>
		</div>
		{{#ifCond User.id user.id}}
			<div>
				<a href='/users/{{User.id}}/edit' class='btn btn-primary'>Edit</a>
			</div>
		{{/ifCond}}
	</div>
</div>

<div class='card d-flex w-75 m-auto mt-5' style='width: 18rem;'>
	<h6 class='card-header'>{{User.numberOfComments}} 已評論餐廳</h6>
	<div class='d-flex flex-row p-3 flex-wrap'>
		{{#each User.Comments}}
			<a href='/restaurants/{{this.Restaurant.id}}' class='m-2'>
				<img
					src='{{this.Restaurant.image}}'
					alt='Restaurant image'
					style='width: 50px; height: 50px'
				/>
			</a>
		{{/each}}
	</div>
</div>