<div class='row mb-5'>
  <div class='col-md-4'>
    <img class='img-responsive center-block' src='{{user.image}}' style='width: 250px; margin-bottom: 25px; transition: opacity 0.5s; opacity:0;' onload='this.style.opacity=1;' />
  </div>
  <div class='col-md-8'>
    <h1>{{user.name}}</h1>
    <p>{{user.email}}</p>
    <p>{{commentCounts}}已評論餐廳</p>
    {{#if selfUser}}
      <a class='btn btn-primary' href='/users/{{user.id}}/edit'>Edit</a>
    {{/if}}
    <a class='btn btn-outline-secondary' href='javascript:history.back()'>Back</a>
  </div>
  <hr />
</div>

{{! 評論的餐廳 }}
<div class='card'>
  <div class='card-header'>
    <p>{{commentCounts}}已評論餐廳</p>
  </div>
  <div class='card-body'>
    {{#each user.Comments}}
      <a href='/restaurants/{{this.restaurantId}}'>
        <img src='{{this.Restaurant.image}}' class='card-img-top img-fluid me-2 mb-2' alt='restaurant' style='width: 100px; transition: opacity 0.5s; opacity:0;' onload='this.style.opacity=1;' />
      </a>
    {{/each}}
  </div>
</div>