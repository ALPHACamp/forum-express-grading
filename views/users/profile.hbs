<div class="card card-body">
  <div class="row">
    <section class="img-container col-md-3">
      <img
        src="{{user.image}}"
        alt="profile-img"
        style="width: 100%; height:100%"
      />
    </section>
    <section class="col-md-6">
      <h1>{{user.name}}</h1>
      <p>{{user.email}}</p>
      <a class="btn btn-primary" href="/users/{{user.id}}/edit">Edit</a>
    </section>
  </div>
</div>