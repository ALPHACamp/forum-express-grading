
<div class="container rounded mb-5 p-3" style="box-shadow: 1px 1px 5px 2px #eee">
  <div class="row">
  
    <div class="col-md-4">
      <img class="img-fluid center-block" style="border radius:50%" alt="user-avatar" src="{{user.image}}">
    </div>
    <div class="col-md-8">
      <ul class="list-unstyled">
        <li class="mt-3"><h3>{{user.name}}</h3></li>
        <li class="mt-3"><h5>{{user.email}}</h5></li>
        <li class="mt-5"><a class="btn btn-outline-primary" href="/users/{{user.id}}/edit">edit</a></li>
      </ul>
    </div>
  </div>
</div>

<div class="container rounded mb-5 p-3" style="box-shadow: 1px 1px 5px 2px #eee">
  <div class="card">
    <div class="card-header">
      {{#if commentCount}}
        {{commentCount}}
      {{else}}
        0
      {{/if}}已評論過
    </div>
    <div class="card-body">

      <div class="row">
        {{#each restaurants}}
        <div class="col-sm-3 mb-2">
          <div class="card" style="max-width: 360px;">
            <div class="row g-0">
              <div class="col-md-4">
                <a href="/restaurants/{{this.id}}">
                  <img src="{{this.image}}" class="img-fluid rounded-start" alt="rest-image">
                </a>
              </div>
              <div class="col-md-8">
                <div class="card-body">
                  <a href="/restaurants/{{this.id}}">
                    <h5 class="card-title">{{this.name}}</h5>
                  </a>
                  <p class="card-text"><small class="text-muted">{{relativeTimeFromNow this.updateAt}}</small></p>
                </div>
              </div>
            </div>
          </div>
        </div>    
        {{/each}}
      </div>
        
    </div>
  </div>
</div>

  

