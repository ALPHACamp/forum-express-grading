<div class="row mb-2">

  <div class="col-md-5">
    <img class="img-responsive center-block mb-3" src="{{user.image}}"
      style="width: 250px; transition: opacity 0.5s; opacity:0;" onload="this.style.opacity=1;">
  </div>

  <div class="col-md-7">
    <ul class="list-unstyled">
      <li>
        <h5><strong>{{user.name}}</strong></h5>
      </li>
      <p></p>
      <li>{{user.email}}</li>
      <p></p>
    </ul>
    {{#ifCond user.id userOfLogin.id }}
    <button type="button" class="btn btn-primary btn-sm">
      <a class="btn btn-primary btn-sm" href="/users/{{userOfLogin.id}}/edit">
        Edit
      </a>
    </button>
    {{/ifCond }}
  </div>
  <p></p>
  <div class="row" style="text-align: left;">

    <div class="col-md-12">
      <div class="card">
        <div class="card-header">
          {{user.Comments.length}} 已評論餐廳
        </div>
        <div class="row">
          {{#each user.Comments}}
          <div class="col-md-2 m-1">
            <a href="/restaurants/{{this.Restaurant.id}}">
              <img class="card-img-top img-fluid" src="{{this.Restaurant.image}}" width="286px" height="286px"
                style="transition: opacity 0.5s; opacity:0;" onload="this.style.opacity=1;">
            </a>
          </div>
          {{/each}}
        </div>
      </div>
      <p></p>

    </div>
  </div>
</div>