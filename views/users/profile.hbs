<div class="card-body bg-white mb-5">
  <div class="row align-items-center mb-3">
    <div class="col-md-4">
      <img class="img-responsive center-block" src="{{user.image}}" style="width: 250px; transition: opacity 0.5s; opacity:0;" onload="this.style.opacity=1;">
    </div>
    <div class="col-md-8">
      <p>{{ user.name }}</p>
      <p>{{ user.email }}</p>
      <a class="btn btn-primary" href="/users/{{ user.id }}/edit">Edit</a>
    </div>
  </div>
</div>
  <div class="card">
    <div class="card-header">{{ commentedRestaurants.length }} 已評論餐廳</div>
    <div class="card-body">
      <div class="row align-items-center justify-content-center">
        {{#each commentedRestaurants}}
          <div class="col-md-3 text-center p-3">
            <a href="/restaurants/{{ this.Restaurant.id }}" class="col-md-auto">
              <img class="img-responsive center-block" src="{{this.Restaurant.image}}" style="width: 250px; transition: opacity 0.5s; opacity:0;" onload="this.style.opacity=1;">
            </a>
          </div>
        {{/each}}
      </div>
    </div>
  </div>