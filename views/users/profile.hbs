<div class="container">
  <div class="row mb-5">
    <div class="col-md-5">
      <img class="rounded-circle" src="{{user.image}}"
        style="width: 20vw; height: 20vw; transition: opacity 0.5s; opacity:0;" onload="this.style.opacity=1;">
    </div>
    <div class="col-md-7">
      <h1 class="mt-5">{{user.name}}</h1>
      <p>{{user.email}}</p>
      <p>{{commentTimes}} 已評論餐廳</p>
      {{#ifCond user.id loginUser.id}}
      <a href="/users/{{user.id}}/edit"><button class="btn btn-primary my-sm-0 my-2 mb-5">Edit</button></a>
      {{/ifCond}}
    </div>
    <hr class="mt-5">
    <div class="col-md-12">
      <p>{{commentTimes}} 已評論餐廳</p>
      <div class="d-flex flex-wrap">
        {{#each user.Comments}}
        <div class="m-2">
          <a href="/restaurants/{{this.Restaurant.id}}">
            <img src="{{this.Restaurant.image}}" title="{{this.Restaurant.name}}" style="width: 8vw; height: 8vw; transition: opacity 0.5s; opacity:0;"
              onload="this.style.opacity=1;">
          </a>
        </div>
        {{/each}}
    </div>
  </div>
</div>