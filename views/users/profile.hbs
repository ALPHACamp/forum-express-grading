<div class="row">
  <div class="col-md-4">
    <img class="img-responsive center-block" src="{{user.avatar}}" style="width: 250px; margin-bottom: 25px; transition: opacity 0.5s; opacity:0;" onload="this.style.opacity=1;">
  </div>

  <div class="col-md-8">
    <h3 style="white-space: break-spaces;" class="mb-4">{{user.name}}</h3>
    <h5 style="white-space: break-spaces;" class="mb-5">{{user.email}}</h5>
    <h5 style="white-space: break-spaces;" class="mb-5">{{commentNumber}} 則評論</h5>
    {{#ifCond login_user.id user.id}}
    <a class="btn btn-primary mt-3" href="/users/{{user.id}}/edit">edit</a>
    {{/ifCond}}
  </div>

  <div class="row">
    <h2 style="white-space: break-spaces;">{{commentNumber}} 則評論</h2>
    {{#each comments}}
    <div class="col-md-2">
      <div class="card mb-4 shadow-sm">
        <a href="/restaurants/{{this.Restaurant.id}}">
          <img class="card-img-top img-fluid" src="{{this.Restaurant.image}}" alt="Card image cap" width="286px"
          height="180px" style="transition: opacity 0.5s; opacity:0;" onload="this.style.opacity=1;" />
        </a>
      </div>
    </div>
    {{/each}}
  </div>
</div>
