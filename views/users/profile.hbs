<div class="container">
  <div class='row'>
    <div class='card'>
      <div class='card-body d-flex'>
        <div class='col-md-4'>
          <img
            class='img-responsive card-image-left'
            src='{{userProfile.image}}'
            style='width: 300px; height:300px margin-bottom: 25px; transition: opacity 0.5s; opacity:0; display:inline'
            onload='this.style.opacity=1;'
          />
        </div>
        <div class='col-md-8'>
          <h4>{{userProfile.name}}</h4>
          <p>{{userProfile.email}}</p>
          <p class="mt-3">{{comments.count}} 已評論餐廳</p>
          <div class='mt-5'>
          {{#ifCond userProfile.id user.id}}
            <a
              class='btn btn-primary'
              href='/users/{{user.id}}/edit'
            >Edit</a></div>
          {{/ifCond}}
        </div>
      </div>
    </div>
  </div>  
  
  <div class="row mt-5">
    <div class="card px-0">
      <div class="card-header">
        <strong>{{comments.count}} 已評論餐廳</strong>
      </div>
      <div class="card-body" style="min-height: 8rem;">
        {{#if comments.rows.length}}
          {{#each comments.rows}}        
            <div class="me-3" style="display: inline;">             
              <a class="text-decoration-none" href="/restaurants/{{this.Restaurant.id}}">
                <img
                  class='card-img'
                  src="{{this.Restaurant.image}}"
                  style='width: 100px; height:100px margin-bottom: 25px; transition: opacity 0.5s; opacity:0; '
                  onload='this.style.opacity=1;'
                />  
              </a>                      
            </div>          
          {{/each}}
        {{/if}}
      </div>
    </div>  
  </div>
</div>
