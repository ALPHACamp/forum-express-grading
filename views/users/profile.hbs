<div class='row mb-5'>
  <div class='col-md-4'>
    <img
      class='img-responsive center-block mb-5'
      src='{{user.image}}'
      style='width: 250px; transition: opacity 0.5s; opacity:0;'
      onload='this.style.opacity=1;'
    />
  </div>
  <div class='col-md-8'>
    <h1>{{user.name}}</h1>
    <h2>{{user.email}}</h2>
    <a class='btn btn-primary' href='/users/{{user.id}}/edit'>edit</a>
  </div>
</div>
<div class='card'>
  <div class='card-header'>
    <strong>{{user.commentedRestaurants.length}}</strong>
    已評論餐廳
  </div>
  <div class='card-body'>
    {{#each user.commentedRestaurants}}
      <a href='/restaurants/{{this.id}}' class='text-decoration-none'>
        <img
          src={{this.image}}
          width='60'
          height='60'
          class='avatar'
          style='transition: opacity 0.5s; opacity:0;'
          onload='this.style.opacity=1;'
        />
      </a>
    {{/each}}
  </div>
</div>