<div class="row">
  <div class="col-md-4">
    <img class="img-responsive center-block" src="{{user.image}}"
      style="width: 250px; margin-bottom: 25px; transition: opacity 0.5s; opacity:0;" onload="this.style.opacity=1;">
    <br>
  </div>
  <div class="col-md-8">
    <ul class="list-unstyled">
      <li><strong>{{user.name}}</strong></li>
      <li>{{user.email}}</li>      
    </ul>
    <a class="btn btn-outline-primary" href="/users/{{user.id}}/edit" role="button">Edit</a>
  </div>
  <hr>
</div>
