<div class="card mb-3">
  <div class="row g-0">
    <div class="col-md-4">
      <img src="{{user.image}}" class="img-fluid rounded-start" alt="avatar">
    </div>
    <div class="col-md-8">
      <div class="card-body">
        <h5 class="card-title">{{user.name}}</h5>
        <p class="card-text">{{user.email}}</p>
        <p class="card-text"><small class="text-body-secondary">最近更新：{{relativeTimeFromNow
            user.updatedAt}}</small>
        </p>
        <a class="btn btn-primary" href="/users/{{user.id}}/edit">edit</a>
      </div>
    </div>
  </div>
</div>