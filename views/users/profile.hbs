<div class="card mb-3">
  <div class="row g-0">
    <div class="col-md-4">
      <img src="{{user.image}}" class="img-fluid rounded-start" alt="...">
    </div>
    <div class="col-md-8">
      <div class="card-body">
        <h5 class="card-title">Profile</h5>
        <ul class="list-unstyled">
          <li><strong>Name: </strong>{{user.name}}</li>
        </ul>
        <ul class="list-unstyled">
          <li><strong>Email: </strong>{{user.email}}</li>
        </ul>
        {{#if editPermission}}
        <a class="btn btn-outline-secondary" href="/users/{{user.id}}/edit">Edit</a>
        {{/if}}
      </div>
    </div>
  </div>
</div>

<div class="card mt-3">
  <div class="card-header">
    {{#if user.Comments}}
    <p>{{user.Comments.length}} 已評論餐廳</p>
    {{else}}
    <p>尚未評論餐廳</p>
    {{/if}}
  </div>

  <div class="card-group">
    {{#each user.Comments}}
    <div class="card">
      <a href="/restaurants/{{this.Restaurant.id}}">
        <img class="rounded img-fluid" src="{{this.Restaurant.image}}" alt="Card image cap"
          style="transition: opacity 0.5s; opacity:0;" onload="this.style.opacity=1;">
      </a>
    </div>
    {{/each}}
  </div>
</div>