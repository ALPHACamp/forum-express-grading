<div class="row mb-5 bg-white rounded shadow p-3 mb-5 bg-body">
  <div class="col-md-4">
    <img class="img-responsive center-block mb-5" src="{{user.image}}"
      style="width: 300px; margin-bottom: 25px; transition: opacity 0.5s; opacity:0;" onload="this.style.opacity=1;">
  </div>
  <div class="col-md-8">
      <p class="user-name fs-4 fw-bolder">{{ user.name }}</p>
      <p class="user-email">{{ user.email }}</p>
      <a class="btn btn-primary" href="/users/{{user.id}}/edit">Edit</a>
  </div>
</div>