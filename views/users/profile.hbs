<div class="row">
  <div class="col-md-4">
    <img class="img-responsive center-block" src="{{user.image}}"
      style="width: 350px; margin-bottom: 25px; transition: opacity 0.5s; opacity:0;" onload="this.style.opacity=1;">
    <br>
  </div>

  <div class="col-md-8">
    <p style="white-space: break-spaces;">{{user.name}}</p>
    <p style="white-space: break-spaces;">{{user.email}}</p>
    <p>{{#if user.Comments.length}}
    {{user.Commets.length}}
    {{user.name}}已評論餐廳
    {{else}}
    未評論餐廳
    {{/if}}</p>
    <a class="btn btn-primary" href="/users/{{user.id}}/edit">edit</a>
  </div>
  <hr>

  <div class="card mt-5">
    <div class="card-header">
    {{#if user.Comments.length}}
    {{user.Commets.length}}
      {{user.name}}已評論餐廳
    {{else}}
      未評論餐廳
    {{/if}}
    </div>
    <div class="card-body" style="min-height: 100px">
      {{#each user.Comments}}
      <a href="/restaurants/{{this.Restaurant.id}}" class="text-text-decoration-none">
      <img src="{{this.Restaurant.image}}" alt="center-block img-responsive img-thumbnail m-2" style="width: 80px; height:80px" alt="餐廳圖片">
      </a>
      {{/each}}
    </div>
  </div>
</div>

