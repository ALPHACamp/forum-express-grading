<div class="row mb-5">
  <div class="col-auto">
    <img class="img-responsive center-block mb-5" src="{{user.avatar}}"
      style="width: 250px; transition: opacity 0.5s; opacity:0;" onload="this.style.opacity=1;">
  </div>
  <div class="col-md-4">
    <div class="well">
      <h1>{{user.name}}</h1>
      <ul class="list-unstyled">
        <li>Email: {{user.email}}</li>
      </ul>
      {{#ifCond user.id userId}}
      <a href="/users/{{user.id}}/edit" class="btn btn-primary">Edit</a>
      {{/ifCond}}
    </div>
  </div>
</div>
<hr>
<div class="card">
  <div class="card-header">
    {{user.Comments.length}} 已評論過的餐廳
  </div>
  <div class="card-body">
    <div class="row">
      <div class="col-12">
        {{#each user.Comments }}
        <a href="/restaurants/{{this.Restaurant.id}}"><img src="{{this.Restaurant.image}}" alt="" class="col-1"></a>
        {{/each}}
      </div>
    </div>
  </div>