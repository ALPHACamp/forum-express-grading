<div class="container d-flex justify-content-center">
  <div class="card" style="width: 50rem;">
    <div class="d-flex align-items-center">
      <div>
        <img src="{{#if image}}{{user.image}}{{else}}https://cdn-icons-png.flaticon.com/512/5234/5234205.png{{/if}}" alt="" style="max-width: 10rem;">
      </div>
      <div class="card-body">
        <h5 class="card-title">{{user.name}}</h5>
        <p class="card-text">{{user.email}}</p>
        <a href="/users/{{user.id}}/edit" class="card-link btn btn-primary">edit</a>
      </div>
    </div>
  </div>
</div>

<div class="container mt-3 d-flex justify-content-center">
  <div class="card" style="width: 50rem;">
    <div class="card-header">
      {{user.Comments.length}} 已評論餐廳
    </div>    
    <div class="card-body d-flex flex-wrap">
      {{#if user.Comments}}
      {{#each user.Comments}}
      <div class="col-2 m-2">
        <a href="/restaurants/{{this.Restaurant.id}}">
          <img src="{{this.Restaurant.image}}" alt="restaurant image" class="img-fluid">      
        </a>
      </div>
      {{/each}}
      {{else}}
      <div class="card-body">
        <p class="card-text">
          尚無評論，想要新增評論？ 
          <a href="/restaurants">
            前往餐廳
          </a>
        </p>
      </div>
      {{/if}}
    </div>
  </div>
</div>