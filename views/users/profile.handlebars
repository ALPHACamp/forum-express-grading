<div class="row my-5">
  <div class="col-md-4">
    <img class="img-responsive center-block mb-5" src="{{user.image}}" style="width: 250px; transition: opacity 0.5s; opacity:0;" onload="this.style.opacity=1;">
  </div>
  <div class="col-md-8 mb-5">
    <h1>{{user.name}}</h1>
    <p>{{user.email}}</p>
    <a href="/users/{{user.id}}/edit" class="btn btn-primary mt-3">Edit</a>
  </div>
  <hr>
  <div class="mt-3">
    <h3>已發表 {{user.Comments.length}} 則評論</h3>
    <div class="row row-cols-1 row-cols-md-6 g-4 mt-1">
      {{#each user.Comments}}
      <div class="col">
        <div class="card">
          <a href="/restaurants/{{this.Restaurant.id}}">
            <img src="{{this.Restaurant.image}}" class="card-img-top">
          </a>
          <div class="card-body">
            <p class="card-title">{{this.Restaurant.name}}</p>
          </div>
        </div>
      </div>
      {{/each}}
    </div>
  </div>
</div>