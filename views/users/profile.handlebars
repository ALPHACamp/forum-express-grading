<div class="container d-flex flex-row bg-white p-3">
  {{#if user.image}}
  <img src="{{user.image}}" class="img-thumbnail" width="200" alt="it is a user photo">
  {{else}}
  <div class="bg-dark text-light p-2 d-flex justify-content-center align-items-center">
    <i>please upload a profile photo</i>
  </div>
  {{/if}}
  <div class="mx-3">
    <h1>{{user.name}}</h1>
    <p>{{user.email}}</p>
    <a href="/users/{{user.id}}/edit" class="btn btn-primary">edit</a>
  </div>
</div>