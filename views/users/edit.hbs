<form action="/users/{{ user.id }}?_method=put" method="post">
  <div class="form-row mb-3">
    <label class="form-label" for="name">Name</label>
    <input class="form-control" type="text" name="name" id="name" placeholder="Enter name" value="{{ user.name }}">
  </div>
  <div class="form-row mb-3">
    <label class="form-label" for="image">Image</label>
    <input class="form-control" type="text" id="image" name="image" placeholder="Enter image url" value="{{ user.image }}">
  </div>
  <button type="submit" class="btn btn-primary">Submit</button>
</form>