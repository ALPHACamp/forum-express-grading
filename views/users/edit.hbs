<div class="row">
    <div class="mb-4 text-center">
        <h1 class="h3 font-weight-normal mb-3">Edit User</h1>
    </div>

    <form action="/users/{{user.id}}?_method=PUT" method="POST" enctype="multipart/form-data">
        <div class="form-row mb-3">
            <label class="form-label" for="name">Name</label>
            <input class="form-control" type="text" name="name" id="name" placeholder="Enter name" value="{{user.name}}"
                required>
        </div>

        <div class="form-row mb-3">
            <label class="form-label" for="image">Image</label>
            <input class="form-control" type="file" class="form-control-file" id="image" name="image">
        </div>
        <hr>
        <button type="submit" class="btn btn-primary" style="width: 80px; height: 40px">Submit</button>
        <a class="btn btn-outline-secondary" style="width: 80px; height: 40px" href="javascript:history.back()">Back</a>
    </form>

</div>