<div class="row mb-1">
  <div class="col-md-12">
    <h1>{{user.name}}編輯頁面</h1>
  </div>
  <hr>
<form action="/users/{{user.id}}?_method=PUT" method="POST" enctype="multipart/form-data">
  <div class="form-row mb-3">
    <label class="form-label" for="name">Name</label>
    <input class="form-control" type="text" class="form-control" name="name" id="name" placeholder="Please Enter Name"
      value="{{user.name}}" required>
  </div>
  <div class="form-row mb-3">
    <label class="form-label" for="image">Image</label>
    <input class="form-control" type="file" class="form-control-file" name="image" id="image">
  </div>
  <button type="submit" class="btn btn-primary">Submit</button>
  <a class="btn btn-outline-secondary" href="javascript:history.back()">Back</a>
</form>
</div>