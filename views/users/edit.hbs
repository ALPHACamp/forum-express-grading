<form action="/users/{{user.id}}/edit?_method=PUT" method="POST" enctype="multipart/form-data">

  <div class="mb-4">
    <label for="name" class="form-label fw-bold">Name</label>
    <input type="text" id="name" name="name" class="form-control mb-3" value="{{user.name}}">

  </div>

  <div class="form-row mb-3">
    <label class="form-label" for="image">Image</label>
    <input class="form-control" type="file" class="form-control-file" id="image" name="image">
  </div>

  <div class="mb-4 d-flex justify-content-start">
    <button type="submit" class="btn btn-primary me-2">Submit</button>
    <a class="btn btn-outline-secondary"href="javascript:history.back()">Back</a>
  </div>

</form>