<form class="mb-5" action="/users/{{user.id}}?_method=PUT" method="POST" enctype="multipart/form-data">
  <div class="form-row mb-3">
    <label class="form-label" for="name">Name</label>
    <input class="form-control" type="text"  name="name" id="name" placeholder="Enter Name" value="{{user.name}}">
  </div>
  <div class="form-row mb-4">
    <label class="form-label" for="image">Image</label>
    <input class="form-control" type="file" class="form-control-file" name="image" id="image">
  </div>
  <button type="submit" class="btn btn-primary me-3">Submit</button>
  <a class="btn btn-outline-secondary" href="javascript:history.back()">Back</a>
</form>