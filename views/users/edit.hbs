<form action="/users/{{ user.id }}?_method=PUT" method="POST" enctype="multipart/form-data">
  <div class="container-sm m-5">
    <div class="row">
      <div class="col-sm-6">
        <div class="mb-3">
          <label class="form-label">Name</label>
          <input class="form-control" type="text" style="width:300px" name="name"
            value="{{ user.name }}">
        </div>
        <div class="mb-3"></div>
          <label class="form-label" for="image">Image</label>
          <input class="form-control" type="file" class="form-control-file" id="image" name="image">
        </div>
      </div>
      <button type="submit" class="btn btn-primary mt-4">Submit</button>
    </div>
  </div>
</form>
