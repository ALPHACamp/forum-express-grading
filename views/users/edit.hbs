<form action="/users/{{user.id}}?_method=PUT" method="POST" enctype="multipart/form-data">

  <div class="form-row mb-3">
    <label class="form-label" for="name">Name</label>
    <input class="form-control" type="text" name="name" id="name" placeholder="Enter name" value="{{user.name}}" required>
  </div>

  <div class="form-row mb-3">
    <label class="form-label" for="avatar">Image</label>
    <input class="form-control form-control-file" type="file" name="avatar" id="avatar">
  </div>

  <button type="submit" class="btn btn-primary">Submit</button>
  <a class="btn btn-outline-secondary" href="javascript:history.back()">Back</a>
  
</form>
