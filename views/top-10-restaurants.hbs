{{> restaurant-tabs route='topRestaurants'}}
<h1>Top 10 人氣餐廳</h1>
<hr>
<div class="row align-content-center flex-wrap flex-column">
  {{#each restaurants}}
  <div class="card mb-3 d-block" style="max-width: 540px;">
    <div class="row g-0">
      <div class="col-md-4">
        <a href="/restaurants/{{this.id}}"><img src="{{this.image}}" class="img-fluid rounded-start"></a>
      </div>
      <div class="col-md-8">
        <div class="card-body">
          <div class="d-flex justify-content-between">
            <a href="/restaurants/{{this.id}}" class="link-dark">
              <h5 class="card-title " style="display: inline;">{{this.name}}</h5>
            </a>
            <small class="fs-6 badge rounded-pill bg-secondary">{{this.Category.name}}</small>
          </div>
          <p class="card-text">{{this.description}}</p>
          <span class="bg-warning badge me-5">收藏人數：{{this.favoritedCount}}</span>
          <a class="btn btn-primary" href="/restaurants/{{this.id}}">Show</a>
          {{#if isFavorited}}
          <form action="/favorite/{{this.id}}?_method=DELETE" method="post" style="display: inline-block;">
            <button class="btn btn-danger">移除最愛</button>
          </form>
          {{else}}
          <form action="/favorite/{{this.id}}" method="post" style="display: inline-block;">
            <button class="btn btn-primary">加到最愛</button>
          </form>
          {{/if}}
        </div>
      </div>
    </div>
  </div>
  {{/each}}
</div>