<ul class="nav nav-pills">
  <li class="nav-item">
    <a class="nav-link {{#isSame '' categoryId}}active{{/isSame}}" href="?categoryId=">全部</a>
  </li>
  {{#each categories}}
    {{#if this.isDeleted}}
    {{else}}
    <li class="nav-item">
      <a class="nav-link {{#isSame this.id ../categoryId}}active{{/isSame}}"
        href="?categoryId={{this.id}}">{{this.name}}</a>
    </li>
    {{/if}}
  {{/each}}
</ul>
<div class="row mt-3">
  {{#each restaurants}}
    <div class="col-md-4">
      <div class="card mb-4 shadow-sm">
        <a href="/restaurants/{{this.id}}">
          <img
            class="card-img-top img-fluid"
            src="{{this.image}}"
            alt="Card image cap"
            width="286px"
            height="180px"
            style="transition: opacity 0.5s; opacity:0;"
            onload="this.style.opacity=1;"
          />
        </a>
        <div class="card-body">
          <p class="card-text">
            <a href="/restaurants/{{this.id}}">
              {{this.name}}
            </a>
          </p>
          <span class="badge bg-secondary">
            {{#if this.Category.isDeleted}}
              無對應類別
            {{else}}
              {{this.Category.name}}
            {{/if}}
          </span>
          <p class="card-text text-truncate">{{this.description}}</p>
        </div>
      </div>
    </div>
  {{/each}}
</div>

<div class="pagination-area col-6 mx-auto">
  <nav class="mt-3" aria-label="page navigation">
    <ul class="pagination justify-content-center">
      <li class="page-item {{#isSame pagination.currentPage 1}}disabled{{/isSame}}">
        <a class="page-link" href="/restaurants?page={{pagination.prev}}&categoryId={{categoryId}}" aria-label="Previous">
          <span aria-hidden="true">&laquo;</span>
        </a>
      </li>
      {{#if pagination.showFirstPage }}
        <li class="page-item">
            <a class="page-link" href="/admin/restaurants?page=1" aria-label="Previous">
            <span aria-hidden="true">1</span>
            </a>
        </li>
      {{/if}}
      {{#if pagination.hideExcessiveStartPages}}
        <li class="page-item disabled">
            <a class="page-link">
            <span aria-hidden="true">...</span>
            </a>
        </li>
      {{/if}}
      {{#each pagination.pages}}
        {{#isSame this ../pagination.currentPage}}
          <li class="page-item active"><a class="page-link" href="#">{{this}}</a></li>
        {{else}}
          <li class="page-item">
            <a class="page-link" href="/restaurants?page={{this}}&categoryId={{../categoryId}}">{{this}}</a>
          </li>
        {{/isSame}}
      {{/each}}
      {{#if pagination.hideExcessiveEndPages}}
        <li class="page-item disabled">
            <a class="page-link">
            <span aria-hidden="true">...</span>
            </a>
        </li>
      {{/if}}
      {{#if pagination.showLastPage }}
        <li class="page-item">
            <a class="page-link" href="/admin/restaurants?page={{pagination.totalPages}}" aria-label="Previous">
            <span aria-hidden="true">{{pagination.totalPages}}</span>
            </a>
        </li>
      {{/if}}
      <li class="page-item {{#isSame pagination.currentPage pagination.totalPages}}disabled{{/isSame}}">
        <a class="page-link" href="/restaurants?page={{pagination.next}}&categoryId={{categoryId}}" aria-label="Next">
          <span aria-hidden="true">&raquo;</span>
        </a>
      </li>
    </ul>
  </nav>
</div>