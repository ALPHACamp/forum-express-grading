<div class="row gy-4">
  <div class="col-12">
    <div class="row gy-4">
      <div class="col-12 col-lg-5 d-flex flex-column">
        <label for="imageFile" class="form-label">餐廳封面(只能上傳JPG檔或PNG檔)</label>
        <input id="imageFile" name="image" type="file" class="form-control" value="{{restaurant.image}}" onchange="readURL(this)" targetID="previewImg">
        <div class="restaurant-img-container">
          <img id="previewImg" src="{{restaurant.image}}" width="100%" height="290px" max-width="320px" class="mt-3" style="object-fit: cover;" onerror="this.src='/public/images/default-restaurant.jpg'" />
        </div>
      </div>
      <div class="col-12 col-lg">
        <div class="row gy-2">
          <div class="col-12">
            <label for="name" class="form-label"><span class="text-danger">*</span>餐廳名稱</label>
            <input id="name" name="name" type="text" class="form-control" value="{{restaurant.name}}" />
          </div>
          <div class="col-12 col-lg-7">
            <label for="tel" class="form-label">電話</label>
            <input id="tel" name="tel" type="tel" class="form-control" oninput="telFormat(event)" maxlength="10" value="{{restaurant.tel}}" />
          </div>
          <div class="col-12 col-lg-5">
            <label for="openingHours" class="form-label">營業時間</label>
            <input id="openingHours" name="openingHours" type="time" class="form-control" value="{{restaurant.openingHours}}" />
          </div>
          <div class="col-12">
            <label for="address" class="form-label">地址</label>
            <input id="address" name="address" type="text" class="form-control" value="{{restaurant.address}}" />
          </div>
          <div class="col-12">
            <label for="description" class="form-label">餐廳描述</label>
            <textarea id="description" name="description" class="form-control" rows="4">{{restaurant.description}}</textarea>
          </div>
        </div>
      </div>
    </div>
  </div>
  <hr>
</div>
<div class="d-flex gap-3 justify-content-end mt-4">
  <button type="button" class="btn btn-secondary" onclick="history.back()">取消</button>
  <button type="submit" class="btn btn-primary">送出</button>
</div>