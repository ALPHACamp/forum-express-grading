<div class="form-row mb-3">
  <label class="form-label" for="name">Name</label>
  <input class="form-control" type="text" name="name" id="name" placeholder="Enter name" size="30"
    value="{{restaurant.name}}" required>
</div>
<div class="form-row mb-3">
  <label class="form-label" for="tel">Tel</label>
  <input class="form-control" type="number" name="tel" id="tel" placeholder="Enter tel" size="15"
    value="{{restaurant.tel}}">
</div>
<div class="form-row mb-3">
  <label class="form-label" for="address">Address</label>
  <input class="form-control" type="text" name="address" id="address" placeholder="Enter address" size="30"
    value="{{restaurant.address}}" required>
</div>
<div class="form-row mb-3">
  <label class="form-label" for="openingHours">Opening Hours</label>
  <input class="form-control" type="time" name="openingHours" id="openingHours" placeholder="Enter opening hours"
    value="{{restaurant.openingHours}}">
</div>
<div class="form-row mb-3">
  <label class="form-label" for="description">Description</label>
  {{!-- ※textarea中的內容不是用value=""屬性去帶入 --}}
  <textarea class="form-control" id="description" name="description" rows="3"
    maxlength="70">{{restaurant.description}}</textarea>
</div>
<div class="form-row mb-3">
  <label class="form-label" for="image">Image</label>
  <input class="form-control" type="file" class="form-control-file" id="image" name="image">
</div>
<button type="submit" class="btn btn-primary">Submit</button>
<a class="btn btn-outline-secondary" href="javascript:history.back()">Back</a>