{{!-- 分類bar --}}
<ul class="nav nav-pills">
  <li class="nav-item">
    {{!-- 在「全部」按鈕的情況，categoryId 會是空字串 --}}
    <a class="nav-link {{#ifCond '' categoryId}}active{{/ifCond}}" href="?categoryId=">全部</a>
  </li>
  {{#each categories}}
    <li class="nav-item">
      <a class="nav-link {{#ifCond this.id ../categoryId}}active{{/ifCond}}"
        href="?categoryId={{this.id}}">{{this.name}}</a>
    </li>
  {{/each}}
  <li class="nav-item">
    {{!-- 在「為分類」的情況，categoryId 給0 --}}
    <a class="nav-link {{#ifCond 0 categoryId}}active{{/ifCond}}" href="?categoryId=0">未分類</a>
  </li>
</ul>