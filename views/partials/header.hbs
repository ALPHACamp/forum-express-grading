<header>
  <nav class="navbar navbar-expand-lg fixed-top navbar-dark bg-dark px-4">
    <div class="container-fluid">
      <a class="navbar-brand" href="/">餐廳評論網</a>
      {{#if user}}
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarCollapse"
          aria-controls="navbarCollapse" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarCollapse">
          <ul class="navbar-nav ms-auto mb-2 mb-md-0">
            {{#with (checkSessionUser sessionUser user)}}
              {{#if isAdmin}}
              <li class="nav-item">
                <a href="/admin" class="nav-link">Admin 後台</a>
              </li>
              {{/if}}
            {{/with}}

            <li class="nav-item d-inline-flex align-items-center">
              <span class="text-white nav-link">Hi, {{ checkSessionUser sessionUser.email user.email }}</span>
              
            </li>
            <li class="nav-item">
              <a href="/users/{{checkSessionUser sessionUser.id user.id}}" class="text-white nav-link"><span>Profile</span></a>
            </li>
            <li class="nav-item">
              <a href="/logout"><button class="btn btn-outline-success my-sm-0 my-2">Logout</button></a>
            </li>
          </ul>
        </div>
      {{/if}}
    </div>
  </nav>
</header>