{{> restaurant-tabs route='feeds'}}

<h1>最新動態</h1>
<hr />
<div class="row mt-5">
  <div class="col-md-8">
    <div class="card">
      <div class="card-header">
        最新餐廳
      </div>
      {{#each restaurants}}
        <div class="card-body d-flex">
          <div class="col-md-4 text-center my-auto">
            <img class="rounded img-thumbnail " style="max-height: 10rem; max-width: 15rem" src="{{this.image}}" alt="{{this.name}}-photo">
          </div>
          <div class="col-md-8">
          <h4>
            <a class="link-primary" href="/restaurants/{{this.id}}">{{this.name}}</a>
            <small class="fs-6">[<a class="link-primary" href="/restaurants?categoryId={{this.Category.id}}">{{this.Category.name}}</a>]</small>
          </h4>
          <p class="my-4" style="white-space: break-spaces;">{{this.description}}</p>
          {{relativeTimeFromNow this.createdAt}}
          
          </div>
               
        </div>
         <hr>  
      {{/each}}
    </div>
  </div>
  <div class="col-md-4">
    <div class="card">
      <div class="card-header">
        最新評論
      </div>
      <div class="card-body">
        {{#each comments}}
          <div>
            <h4>
              <a class="link-primary" href="/restaurants/{{this.Restaurant.id}}">{{this.Restaurant.name}}</a>
            </h4>
            <p class="my-4" style="white-space: break-spaces;">{{this.text}}</p>
            - <a class="link-secondary" href="/users/{{this.User.id}}">{{this.User.name}}</a>
            <small>at {{relativeTimeFromNow this.createdAt}}</small>
            <hr>
          </div>
        {{/each}}
      </div>
    </div>
  </div>
</div> 