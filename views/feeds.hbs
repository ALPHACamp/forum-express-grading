<link rel="stylesheet" href="/stylesheets/style.css">

{{> restaurant-tabs route='feeds'}}
<h1>最新動態</h1>
<hr />
<div class="row mt-5">
  <div class="col-md-6">
    <div class="card">
      <div class="card-header">
        最新餐廳
      </div>
      <div class="card-body">
        {{#each restaurants}}
        <div>
          <h4>
            <a class="link-primary name-p" href="/restaurants/{{this.id}}">{{this.name}}<span><img src={{this.image}} /></span></a>
            <a href="/restaurants?categoryId={{this.Category.id}}"><small class="fs-6 badge bg-secondary">{{this.Category.name}}</small></a>
          </h4>
          <p class="my-4" style="white-space: break-spaces;">{{this.description}}</p>
          {{relativeTimeFromNow this.createdAt}}
          <hr>
        </div>
        {{/each}}
      </div>
    </div>
  </div>
  <div class="col-md-6">
    <div class="card">
      <div class="card-header">
        最新評論
      </div>
      <div class="card-body">
        {{#each comments}}
        <div>
          <h4>
            <a class="link-primary name-p" href="/restaurants/{{this.Restaurant.id}}">{{this.Restaurant.name}}<span><img src={{this.Restaurant.image}} /></span></a>
          </h4>
          <p class="my-4" style="white-space: break-spaces;">{{this.text}}</p>
          <a class="link-secondary" href="/users/{{this.User.id}}"><img class="user-image" src="{{this.User.image}}">- {{this.User.name}}</a>
          <small>at {{relativeTimeFromNow this.createdAt}}</small>
          <hr>
        </div>
        {{/each}}
      </div>
    </div>
  </div>
</div>