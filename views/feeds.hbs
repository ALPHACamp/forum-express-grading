{{> restaurant-tabs route='feeds'}}
<h1>最新動態</h1>
<hr />
<div class="row mt-5">
  <div class="col-md-6">
    <div class="card">
      <div class="card-header text-white fs-5 fw-bolder" style="background-color: steelblue;">
        最新餐廳
      </div>
      <div class="card-body">
        {{#each restaurants}}
        <div>
          <h4>
            <a class="link-primary text-decoration-none" href="/restaurants/{{this.id}}">{{this.name}}</a>
            <a class="text-decoration-none" href="/restaurants?categoryId={{this.Category.id}}">
              <small class="fs-6">[{{this.Category.name}}]</small>
            </a>
          </h4>
          <p class="my-4" style="white-space: break-spaces;">{{this.description}}</p>
          {{relativeTimeFromNow this.createdAt}}
          <hr>
        </div>
        {{/each}}
      </div>
    </div>
  </div>
  <div class="col-md-6">
    <div class="card">
      <div class="card-header text-white fs-5 fw-bolder" style="background-color: steelblue;">
        最新評論
      </div>
      <div class="card-body">
        {{#each comments}}
        <div>
          <h4>
            <a class="link-primary text-decoration-none" href="/restaurants/{{this.Restaurant.id}}">{{this.Restaurant.name}}</a>
          </h4>
          <p class="my-4" style="white-space: break-spaces;">{{this.text}}</p>
          -> <a class="link-primary text-decoration-none" href="/users/{{this.User.id}}">
              <img src="{{this.User.image}}" class="rounded-circle" alt="{{this.User.name}}" width="25px" height="25px">
            </a>
          <small>at {{relativeTimeFromNow this.createdAt}}</small>
          <hr>
        </div>
        {{/each}}
      </div>
    </div>
  </div>
</div>