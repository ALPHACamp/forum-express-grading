{{> restaurant-tabs route='feeds'}}
<h1>最新動態</h1>
<hr />
<div class="row mt-5">
  <div class="col-md-6">
    <div class="card">
      <div class="card-header">
        最新餐廳
      </div>
      <div class="card-body">
        {{#each restaurants}}
          <div>
            <h4>
              <a class="link-primary" href="/restaurants/{{this.id}}">{{this.name}}</a>
              <a href="/restaurants?categoryId={{this.Category.id}}">
              <button class="btn btn-sm btn-dark btn-outline-warning">
                {{this.Category.name}}  
              </button>
            </a>
            </h4>
            <img src="{{this.image}}" alt="" width="200" height="200">
            <p class="my-4" style="white-space: break-spaces;">{{this.description}}</p>
            -- {{relativeTimeFromNow this.createdAt}}
            <hr>
          </div>
        {{/each}}
      </div>
    </div>
  </div>
  <div class="col-md-6">
    <div class="card">
      <div class="card-header">
        最新評論
      </div>
      <div class="card-body">
        {{#each comments}}
          <div> 
            <img src="{{this.User.image}}" alt="" width="50;" height="50;">
            - <a class="link-secondary" href="/users/{{this.User.id}}">{{this.User.name}}</a>
            留下評論 : 
            <p class="my-4" style="white-space: break-spaces;">{{this.text}}</p>
              在餐廳 <a class="link-primary" href="/restaurants/{{this.Restaurant.id}}">{{this.Restaurant.name}}</a>
            <small>-- {{relativeTimeFromNow this.createdAt}}</small>
            <hr>
          </div>
        {{/each}}
      </div>
    </div>
  </div>
</div>