{{> restaurant-tabs route = 'feeds'}}

<h1>最新動態</h1>
<hr />
<div class='row mt-5'>
  <div class='col-md-6'>
    <div class='card'>
      <div class='card-header'>
        最新餐廳
      </div>
      {{#each restaurants}}
        <div class='card-body'>
          <a href='/restaurants/{{this.id}}'>
            <img src='{{this.image}}' class='card-img-top mt-1' alt='restaurant' style='transition: opacity 0.5s; opacity:0;' onload='this.style.opacity=1;' />
          </a>
          <h4>
            <a class='link-primary' href='/restaurants/{{this.id}}'>{{this.name}}</a>
            <small class='fs-6 mx-2'><a class='text-dark text-decoration-none' href='/restaurants/{{this.categoryId}}'>[{{this.Category.name}}]</a></small>
          </h4>
          <p class='card-text text-truncate my-4'>{{this.description}}</p>
          <p class='blockquote-footer'>{{relativeTimeFromNow this.createdAt}}</p>
          <hr />
        </div>
      {{/each}}
    </div>
  </div>
  <div class='col-md-6'>
    <div class='card'>
      <div class='card-header'>
        最新評論
      </div>
      {{#each comments}}
        <div class='card-body'>
          <h4 class='card-text'>
            <a href='/restaurants/{{this.restaurantId}}'>{{this.Restaurant.name}}</a>
          </h4>
          <p class='card-text' style='white-space: break-spaces;'>{{this.text}}</p>
          <span class='card-text'>
            <a class='link-secondary' href='/users/{{this.userId}}'>{{this.User.name}}</a>
          </span>
          <small class='blockquote-footer mx-1'>{{relativeTimeFromNow this.createdAt}}</small>
          <hr />
        </div>
      {{/each}}
    </div>
  </div>
</div>