{{> restaurant-tabs route='topRestaurants'}}
<h1>Top 10 人氣餐廳</h1>
<hr />
<div class="column" style="text-align: center;">
  {{#each restaurants}}
  <div class="card mb-3">
    <div class="row justify-content-center mb-5 mt-3">
      <div class="col-md-3">
        <a href="/restaurants/{{this.id}}">
          {{#if this.image}}
          <img src="{{this.image}}" width="200px" height="200px" style="transition: opacity 0.5s; opacity:0;"
            onload="this.style.opacity=1;" />
          {{else}}
          <img src="https://fakeimg.pl/140/" width="140px" height="140px" />
          {{/if}}
        </a>
      </div>
      <div class="col-md-3">
        <a href="/restaurants/{{this.id}}">
          <h4>{{this.name}}</h4>
        </a>
        <span class="bg-secondary badge">收藏數：{{this.favoritedCount}}</span>
        <p class="card-text">{{this.description}}</p>
        <p>
        <div>
          <a href='/restaurants/{{this.id}}'>
            <button type="button" class="btn btn-primary">Show</button>
          </a>
          {{#if this.isFollowed }}
          <form action="/favorite/{{this.id}}?_method=DELETE" method="POST" style="display: contents;">
            <button type="submit" class="btn btn-danger">移除最愛</button>
          </form>
          {{else}}
          <form action="/favorite/{{this.id}}" method="POST" style="display: contents;">
            <button type="submit" class="btn btn-primary">加到最愛</button>
          </form>
          {{/if}}
        </div>
        </p>
      </div>
    </div>
  </div>
  {{/each}}
</div>