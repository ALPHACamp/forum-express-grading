{{>restaurant-tabs route='top-restaurants'}}

<h1>Top 10 restaurants</h1>
<hr />

<div class="container d-flex flex-column align-items-center">
{{#each restaurants}}
  <div class="card mb-3" style="width:640px;" >
    <div class="row g-0">
      <div class="col-md-4">
        <img src="{{this.image}}" class="img-fluid rounded-start" alt="..." width="360" height="360" >
      </div>
      <div class="col-md-8">
        <div class="card-body">
          <h5 class="card-title">{{this.name}}</h5>
          <p class="card-text"><span class="badge bg-secondary">收藏數: {{this.favoritedCount}}</span></p>
          <p class="card-text">{{this.description}}</p>
          <div class="d-flex justify-content-evenly">
            <a class="btn btn-primary" href="/restaurants/{{this.id}}">查看詳情</a>
            {{#if this.isFavorited}}
            <form action="/favorite/{{this.id}}?_method=DELETE" method="POST">
              <button class="btn btn-danger" type="submit" >取消收藏</button>
            </form>
            {{else}}
            <form action="/favorite/{{this.id}}" method="POST">
              <button class="btn btn-warning" type="submit">收藏</button>
            </form>
            {{/if}}
          </div>    
        </div>
      </div>
    </div>
  </div>
  {{/each}}
</div>
