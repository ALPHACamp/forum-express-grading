{{> restaurant-tabs route='topRestaurants'}}
<h1>Top 10 人氣餐廳</h1>
<hr />
{{#each restaurants}}
<div class="card mb-3 mx-auto" style="max-width: 720px;">
  <div class="row g-0">
    <div class="col-md-4">
      <img class="img-fluid" src="{{this.image}}" alt="Card image cap" width="286px" height="180px"
        style="transition: opacity 0.5s; opacity:0;" onload="this.style.opacity=1;">
    </div>
    <div class="col-md-8">
      <div class="card-body">
        <h2>{{this.name}}</h2>
        <span class="bg-secondary badge">收藏數：{{this.favoritedCount}}</span>
        <div class="my-3">
          <p class="card-text">{{this.description}}</p>
        </div>
        <a class="btn btn-primary" href="/restaurants/{{this.id}}" role="button">Show</a>
        {{#if this.isFavorited }}
        <form action="/favorite/{{this.id}}?_method=DELETE" method="POST" style="display: contents;">
          <button type="submit" class="btn btn-danger">移除最愛</button>
        </form>
        {{else}}
        <form action="/favorite/{{this.id}}" method="POST" style="display: contents;">
          <button type="submit" class="btn btn-primary">加到最愛</button>
        </form>
        {{/if}}
      </div>
    </div>

  </div>
</div>
{{/each}}