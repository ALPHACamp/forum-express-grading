{{> restaurant-tabs route='topRestaurants'}}

<h1>人氣餐廳</h1>
<hr />
<div class="row d-flex justify-content-center" style="text-align: top;">
  {{#each restaurants}}
  <div class="card my-2 " style="width: 45rem;">
    <div class="card-body row">

      <div class="col-4">
        <a href="/restaurants/{{this.id}}">
          <img class="card-img-top img-fluid" src="{{this.image}}" alt="Card image cap" width="260px" height="180px"
            style="transition: opacity 0.5s; opacity:0;" onload="this.style.opacity=1;">
        </a>
      </div>
      <div class="col-6">
        <h4>
          <a class="link-primary" href="/restaurants/{{this.id}}">{{this.name}}</a>
        </h4>
        <span class="bg-secondary badge">收藏數：{{this.favoritedCount}}</span>
        <p>{{this.description}}</p>

        <a class="btn btn-outline-primary" href="/restaurants/{{this.id}}">Show</a>
        {{#if isFavorited }}
        <form action="/favorite/{{this.id}}?_method=DELETE" method="POST" style="display: contents;">
          <button type="submit" class="btn btn-outline-danger">移除最愛</button>
        </form>
        {{else}}
        <form action="/favorite/{{this.id}}" method="POST" style="display: contents;">
          <button type="submit" class="btn btn-outline-primary">加到最愛</button>
        </form>
        {{/if}}
      </div>
    </div>
  </div>
  {{/each}}
</div>
