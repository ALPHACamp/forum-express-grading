{{> restaurant-tabs route='topRestaurants'}}
<h1>Top 10 人氣餐廳</h1>
<hr />

  {{#each restaurants}}
  <div class="card mb-3">
    <div class="row justify-content-center">
      <div class="col-md-4">
      <div class="card-img-top">
        <a href="/restaurants/{{this.id}}">
          {{#if this.image}}
            <img src="{{this.image}}" width="140px" height="140px" style="transition: opacity 0.5s; opacity:0;"
            onload="this.style.opacity=1;" />
          {{else}}
            <img src="https://via.placeholder.com/140" width="140px" height="140px" />
          {{/if}}
        </a>
      </div>
      </div>
      <div class="col-md-6">
      <div class="card-body">
        <h3>{{this.name}}</h3>
        <span class="bg-secondary badge">收藏數：{{this.favoritedCount}}</span>
        <p style="white-space: break-spaces" class="mt-2">{{this.description}}</p>
        <p class="d-inline">
          <a href="/restaurants/{{this.id}}">
            <button type="submit" class="btn btn-primary">Show</button>
          </a>
          {{#if this.isFavorited }}
            <form action="/favorite/{{this.id}}?_method=DELETE"   method="POST" style="display: contents;">
              <button type="submit" class="btn btn-danger">移除最愛</button>
            </form>
          {{else}}
            <form action="/favorite/{{this.id}}" method="POST" style="display: contents;">
              <button type="submit" class="btn btn-primary">加入最愛</button>
            </form>
          {{/if}}
        </p>
      </div>
      </div>
    </div>
  </div>
  {{/each}}