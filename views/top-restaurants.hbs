{{> restaurant-tabs route='topRestaurants'}}
<h1>Top 10 人氣餐廳</h1>
<hr />

<div class="container">
  {{#each restaurants}}
    <div class="row justify-content-center mb-3">
      <div class="col-md-6">
        {{#if this.image}}
          <img src="{{this.image}}" class="img-fluid" alt="Restaurant Image">
        {{else}}
          <img src="https://fakeimg.pl/140/" class="img-fluid" alt="Placeholder Image">
        {{/if}}
      </div>
      <div class="col-md-6">
        <div class="card-body d-flex flex-column justify-content-between">
          <div>
            <h5 class="card-title">{{this.name}}</h5>
            <span class="bg-secondary badge">追蹤數：{{this.favoritedCount}}</span>
            <p class="card-text">{{this.description}}</p>
          </div>
          <div>
            <a href="/restaurants/{{this.id}}" class="btn btn-primary">Show</a>
            {{#if this.isFavorited}}
              <form action="/favorite/{{this.id}}?_method=DELETE" method="POST" class="d-inline-block">
                <button type="submit" class="btn btn-danger m-1">移除最愛</button>
              </form>
            {{else}}
              <form action="/favorite/{{this.id}}" method="POST" class="d-inline-block">
                <button type="submit" class="btn btn-primary m-1">加到最愛</button>
              </form>
            {{/if}}
          </div>
        </div>
      </div>
    </div>
  {{/each}}
</div>