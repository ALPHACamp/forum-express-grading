{{> restaurant-tabs route='topRestaurants'}}
<h1>Top 10 人氣餐廳</h1>
<hr />
<div class="row d-flex justify-content-center">
  <div class="col-md-8">
    <div class="card-body">
      {{#each restaurants}}
      <div class="card mb-4 shadow-sm p-4">
        <div class="d-flex align-items-center">
          <div class="col-5">
            <a href="/restaurants/{{this.id}}">
              {{#if this.image}}
              <img src="{{this.image}}" width="280px" height="280px" style="transition: opacity 0.5s; opacity:0;"
                onload="this.style.opacity=1;" />
              {{else}}
              <img src="https://fakeimg.pl/280/" width="280px" height="280px" />
              {{/if}}
            </a>
          </div>
          <div class="col align-self-start">
            <h4>
              <a class="link-dark text-decoration-none" href="/restaurants/{{this.id}}">{{this.name}}</a>
              <a class="link-secondary text-decoration-none" href="/restaurants?categoryId={{this.Category.id}}">
                <small class="fs-6">[{{this.Category.name}}]</small>
              </a>
            </h4>
            <span class="badge bg-secondary mb-3">收藏數：{{this.favoritedCount}}</span>
            <p class="mb-3" style="white-space: break-space;">{{this.description}}</p>
            <div class="d-flex align-items-center">
              <a href="/restaurants/{{this.id}}">
                <button class="btn btn-primary">Show</button>
              </a>
              {{#if this.isFavorited}}
              <form action="/favorite/{{this.id}}?_method=DELETE" method="post">
                <button class="btn btn-danger m-1" type="submit">移除最愛</button>
              </form>
              {{else}}
              <form action="/favorite/{{this.id}}" method="post">
                <button class="btn btn-primary m-1" type="submit">加到最愛</button>
              </form>
              {{/if}}
            </div>
          </div>
        </div>
      </div>
      {{/each}}
    </div>
  </div>
</div>