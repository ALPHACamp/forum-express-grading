{{> restaurant-tabs route='topRestaurants'}}
<h1>Top 10 人氣餐廳</h1>
<hr />
{{#each restaurants}}
<div class="card mb-3 mx-auto" style="max-width: 540px;">
  <div class="row g-0">
    <div class="col-md-4">
      <a href="/restaurants/{{this.id}}">
        {{#if this.image}}
        <img class="card-img-top img-fluid" src="{{this.image}}" alt="Card image cap" width="286px" height="180px"
          style="transition: opacity 0.5s; opacity:0;" onload="this.style.opacity=1;">
        {{else}}
        <img src="https://fakeimg.pl/140/" width="140px" height="140px" />
        {{/if}}
      </a>
    </div>
    <div class="col-md-8">
      <div class="card-body">
        <a href="/restaurants/{{this.id}}">
          <h2>{{this.name}}</h2>
        </a>
        <span class="bg-secondary badge">收藏數：{{this.favoritedCount}}</span>
        <p class="card-text word-break: break-all">{{this.description}}</p>
        <div class="d-flex">
          <a href="/restaurants/{{this.id}}"><button type="button" class="btn btn-primary m-1">Show</button></a>
          {{#if this.isFavorited }}
          <form action="/favorite/{{this.id}}?_method=DELETE" method="POST" style="display: contents;">
            <button type="submit" class="btn btn-danger m-1">移除最愛</button>
          </form>
          {{else}}
          <form action="/favorite/{{this.id}}" method="POST" style="display: contents;">
            <button type="submit" class="btn btn-primary m-1">加入最愛</button>
          </form>
          {{/if}}
        </div>
      </div>
    </div>
  </div>
</div>
{{/each}}