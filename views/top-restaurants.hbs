{{> restaurant-tabs route='topRestaurants'}}
<h1>人氣餐廳</h1>
<hr />

<div class="row text-center" style="display: block;">
{{#each restaurants}}
  <div class="card d-flex flex-row mt-4" style="max-width: 600px; min-height: 160px; margin: 0 auto;">
    <div>
      <a href="/restaurants/{{this.id}}">
        <img class="card-img-top img-fluid" src="{{this.image}}" alt="Card image cap" style="min-width: 260px;">
      </a>
    </div>
    <div class=" card-body d-flex flex-column align-items-start" style="max-width: 360px;">
      <div class="text-start">
        <h5 class="card-title">
          <a href="/restaurants/{{this.id}}">{{this.name}}</a>
        </h5>
        <p class="bg-secondary badge">收藏數：{{this.followerCount}}</p>
        <p class="card-text mb-4">{{this.description}}
        </p>
      </div>
      <div class="d-flex flex-row">
        <a href="/restaurants/{{this.id}}" class="btn btn-primary me-2">Show</a>
        <a href="#" class="btn btn-danger">移除最愛</a>
      </div>
    </div>
  </div>
{{/each}}
</div>

