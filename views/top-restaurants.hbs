{{> restaurant-tabs route='topRestaurants'}}
<h1>人氣餐廳</h1>
<hr />
<div class="row justify-content-center">
  <div class="col-md-6">
  {{#each restaurants}}
    <div class="card">
      <div class="card-body">
        <div class="row">
          <div class="col-md-5">
            <a href="/restaurants/{{this.id}}">
            <img src="{{this.img}}" width="180px" height="180px" style="transition: opacity 0.5s; opacity:0;" onload="this.style.opacity=1;" />
            </a>
          </div>
          <div class="col-md-7">
            <h5 class="card-title">
              <a class="link-primary" href="/restaurants/{{this.id}}">{{this.name}}</a>
              <small class="fs-6">[{{this.Category.name}}]</small>
            </h5>
            <span class="bg-secondary badge">收藏數：{{this.favoritedCount}}</span>
            
            <p class="my-4" style="white-space: break-spaces;">{{this.description}}</p>
            <div class="d-flex">
              <div class="px-1 align-items-end">
                <a class="btn btn-primary" href="/restaurants/{{this.id}}">
                Show</a>
              </div>
            {{#if isFavorited }}
              <form action="/favorite/{{this.id}}?_method=DELETE" method="POST" >
                <button type="submit" class="btn btn-danger">移除最愛</button>
              </form>
            {{else}}
              <form action="/favorite/{{this.id}}" method="POST">
                <button type="submit" class="btn btn-primary">加到最愛</button>
              </form>
            {{/if}}
            </div>
          </div>
        </div>
      </div>
    </div>
  {{/each}}
  </div>
</div>
