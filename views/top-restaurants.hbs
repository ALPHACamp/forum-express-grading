{{> restaurant-tabs route='topRestaurants'}}
<h1>Top 10 人氣餐廳</h1>
<hr />
{{#each restaurants}}
 <div class="card mb-3 mx-auto border-info text-bg-light" style="max-width: 540px">
  <div class=" row g-0">
   <div class="col-md-4">
    {{#if this.image}}
     <img src="{{this.image}}" style="transition: opacity 0.5s; opacity:0;" onload="this.style.opacity=1;"
      class="img-thumbnail" />
    {{else}}
     <img src="https://fakeimg.pl/140/" />
    {{/if}}
   </div>
   <div class="col-md-8">
    <div class="card-body">
     <div>
      <a href="/restaurants/{{this.id}}" class="card-title">
       <h2 class="fs-4">{{this.name}}</h2>
      </a>
     </div>
     <div>
      <span class="bg-secondary badge card-text">收藏數：{{this.favoritedCount}}</span>
     </div>
     <div>
      <p>{{this.description}}</p>
     </div>
     <div>
      <a href="/restaurants/{{this.id}}" class="btn btn-info">Show</a>
      {{#if this.isFavorited }}
       <form action="/favorite/{{this.id}}?_method=DELETE" method="POST" style="display: contents;">
        <button type="submit" class="btn btn-danger">移除最愛</button>
       </form>
      {{else}}
       <form action="/favorite/{{this.id}}" method="POST" style="display: contents;">
        <button type="submit" class="btn btn-primary">新增最愛</button>
       </form>
      {{/if}}
     </div>
    </div>
   </div>
   <div>
   </div>
  </div>
 </div>
{{/each}}