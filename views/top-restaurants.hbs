{{> restaurant-tabs route='topRestaurants'}}
<h1>Top10 人氣餐廳</h1>
<hr />
<div class="row mt-5">
  {{#each restaurants}}
  <div class="col-md-12">
    <div class="card-body d-flex">
      <div class="">
        <img class="card-img-top img-fluid rounded-circle" src="{{this.image}}" alt="Card image cap" width="50px"
          height="50px" style="transition: opacity 0.5s; opacity:0;" onload="this.style.opacity=1;">
      </div>
      <div class="">
        <div>
          <h4>
            <a class="link-primary" href="/restaurants/{{this.id}}">{{this.name}}</a>
          </h4>
          <span class="bg-secondary badge">收藏數：{{this.favoriteCount}}</span>
          <p class="my-4" style="white-space: break-spaces;">{{this.description}}</p>
          <a class="btn btn-primary" href="/restaurants/{{this.id}}">Show</a>
          {{#if this.isFavorited }}
          <form action="/favorite/{{this.id}}?_method=DELETE" method="POST" style="display: contents;">
            <button type="submit" class="btn btn-danger">移除最愛</button>
          </form>
          {{else}}
          <form action="/favorite/{{this.id}}" method="POST" style="display: contents;">
            <button type="submit" class="btn btn-primary">加到最愛</button>
          </form>
          {{/if}}
        </div>
      </div>
    </div>
  </div>
  {{/each}}
</div>