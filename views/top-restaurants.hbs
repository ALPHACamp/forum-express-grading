{{> restaurant-tabs route='topRestaurants'}}
<h1>人氣餐廳</h1>
<hr />
<div class="row mt-5 d-flex justify-content-center">
  <div class="col-md-8">
    {{#each restaurants}}
    <div class="card mb-3">   
      <div class="card-body d-flex">
        <div class="col-md-4 text-center my-auto">
          <img class="rounded img-thumbnail " style="max-height: 10rem; max-width: 15rem" src="{{this.image}}" alt="{{this.name}}-photo">
        </div>
        <div class="col-md-8">
          <h4>
            <a class="link-primary" href="/restaurants/{{this.id}}">{{this.name}}</a>
          </h4>
          
          <div>
            <span class="bg-secondary badge">收藏數：{{this.favoritedCount}}</span>
          </div>
          <p class="my-4" style="white-space: break-spaces;">{{this.description}}</p>
          <div class="d-flex">
            <a class="btn btn-primary m-1" href="/restaurants/{{this.id}}">Show</a>
            {{#if isFavorited}}  
              <form action="/favorite/{{this.id}}?_method=DELETE" method="POST">
                <button class="btn btn-danger m-1" type="submit">移除最愛</button>
              </form>
            {{else}}
              <form action="/favorite/{{this.id}}" method="POST">
                <button class="btn btn-primary m-1" type="submit">加到最愛</button>
              </form>
            {{/if}}
          </div>
            
        </div>     
      </div> 
    </div>
    {{/each}}
  </div>
</div>