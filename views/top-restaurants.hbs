{{> restaurant-tabs route='topRestaurants'}}
<h1>人氣餐廳</h1>
<hr />
{{#each restaurants}}
<div class="mb-3 mx-auto" style="max-width:540px;">
  <div class="card mx-auto">
    <div class="row g-0">
      <div class="col-md-4">
        <a href="/restaurants/{{this.id}}">
          {{#if this.image}}
          <img src="{{this.image}}" width="140px" height="140px" style="transition: opacity 0.5s; opacity:0;"
            onload="this.style.opacity=1;" />
          {{else}}
          <img src="https://fakeimg.pl/140/" width="140px" height="140px" />
          {{/if}}
        </a>
      </div>
      <div class="col-md-8">
        <div class="card-body">
          <h5 class="card-title">{{this.name}}</h5>
          <span class="bg-secondary badge">收藏數：{{this.favoritedCount}}</span>
          <p class="card-text">{{this.description}}</p>
          <div class="d-flex ">
            <div class="m-1"><a class="btn btn-primary" href="/restaurants/{{this.id}}">Show</a>
            </div>
            {{#if isFavorited }}
            <form action="/favorite/{{this.id}}?_method=DELETE" method="POST" style="display: contents;">
              <button type="submit" class="btn btn-danger m-1">移除最愛</button>
            </form>
            {{else}}
            <form action="/favorite/{{this.id}}" method="POST" style="display: contents;">
              <button type="submit" class="btn btn-primary m-1">加到最愛</button>
            </form>
            {{/if}}
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
{{/each}}