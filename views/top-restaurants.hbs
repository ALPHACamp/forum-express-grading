{{> restaurant-tabs route='topRestaurants'}}
<h1>Top 10 人氣餐廳</h1>
<hr />
{{#each restaurants}}
  <div class='card d-flex flex-row w-50 m-auto my-3' style='width: 18rem;'>
    <img
      class='card-img-top me-3'
      src='{{this.image}}'
      alt='User avatar'
      style='width: 150px; height: 100px'
    />
    <div class='card-body d-flex flex-column justify-content-between'>
      <div>
        <h5 class='card-title'><a href="/restaurants/{{this.id}}">{{this.name}}</a></h5>
        <p>收藏數: {{this.favouritedCount}}</p>
        <p>this.description</p>
      </div>
      <div class="d-flex flex-row">
        <a href='/restaurants/{{this.id}}' class='btn btn-primary m-1'>Show</a>
        {{#if this.isFavorited }}
        <form action="/favorite/{{this.id}}?_method=DELETE" method="POST">
          <button type="submit" class="btn btn-danger m-1">移除最愛</button>
        </form>
        {{else}}
        <form action="/favorite/{{this.id}}" method="POST">
          <button type="submit" class="btn btn-primary m-1">加到最愛</button>
        </form>
        {{/if}}
      </div>
    </div>
  </div>
{{/each}}
