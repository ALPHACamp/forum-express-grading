{{> restaurant-tabs route='topRestaurants'}}

<h1>Top 10 人氣餐廳</h1>
<hr>

<div class="d-flex flex-column align-items-center">
  {{#each restaurants}}
  <div class="card mb-3 " style="width: 540px; height:300px;">
    <div class="row g-0">
      <div class="col-md-4">

        <a href="/restaurants/{{this.id}}">
          <img class="card-img-top img-fluid" src="{{this.image}}" alt="Card image cap" width="286px" height="180px"
            style="transition: opacity 0.5s; opacity:0;" onload="this.style.opacity=1;">
        </a>

      </div>
      <div class="col-md-8">
        <div class="card-body">

          <h5 class="card-text">
            <a href="/restaurants/{{this.id}}">
              {{this.name}}
            </a>
          </h5>
          <span class="bg-secondary badge bg-secondary">{{this.Category.name}}</span>
          <span class="bg-secondary badge bg-secondary">收藏數：{{this.favoritedCount}}</span>
          <p class="card-text text-truncate" style="white-space: break-spaces;">{{this.description}}</p>
          <div class="d-flex align-items-center">
            <a href="/restaurants/{{this.id}}">
              <button type="button" class="btn btn-primary">Show</button>
            </a>
            {{#if isFavorited}}
            <form action="/favorite/{{this.id}}?_method=DELETE" method="POST">
              <button type="submit" class="btn btn-danger m-1">移除最愛</button>
            </form>
            {{else}}
            <form action="/favorite/{{this.id}}" method="POST">
              <button type="submit" class="btn btn-primary m-1">加到最愛</button>
            </form>
            {{/if}}
          </div>

        </div>
      </div>
    </div>
  </div>
  {{/each}}
</div>