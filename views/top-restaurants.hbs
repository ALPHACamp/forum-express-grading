{{> restaurant-tabs route='topRestaurants'}}
<h1>人氣餐廳</h1>
<hr />

<div class="d-flex flex-column align-items-center">
  {{#each restaurants}}
  <div class="card mb-3" style="width: 540px;">
    <div class="row g-0">
      <div class="col-md-4">
        {{#if this.image}}
        <img src="{{this.image}}" width="140px" style="transition: opacity 0.5s; opacity:0;"
          onload="this.style.opacity=1;" />
        {{else}}
        <img src="https://fakeimg.pl/140/" width="140px" height="140px" />
        {{/if}}
      </div>
      <div class="col-md-8">
        <div class="card-body">
          <h5 class="card-title">{{this.name}}</h5>
          <span class="bg-secondary badge">收藏數：{{this.favoritedCount}}</span>
          <p class="card-text text-truncate">{{this.description}}</p>
          {{#if this.isFavorited }}
          <form action="/favorite/{{this.id}}?_method=DELETE" method="POST" style="display: contents;">
            <button type="submit" class="btn btn-danger">移除收藏</button>
          </form>
          {{else}}
          <form action="/favorite/{{this.id}}" method="POST" style="display: contents;">
            <button type="submit" class="btn btn-primary">加到收藏</button>
          </form>
          {{/if}}

          <p class="card-text"><small class="text-muted">Last updated 3 mins ago</small></p>
        </div>
      </div>
    </div>
  </div>
  {{/each}}
</div>