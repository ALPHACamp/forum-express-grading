{{> restaurant-tabs route='topRestaurants'}}
<h1>人氣餐廳</h1>
<hr>
<div class="row" style="justify-content: center;">
  {{#each restaurants}}
  <div class="card mb-3" style="max-width: 900px;">
  <div class="row g-0"  style="align-items:center;">
    <div class="col-md-4">
      <img src="{{this.image}}" alt="..." style="max-width: 240px; max-height: 240px;">
    </div>
    <div class="col-md-8">
      <div class="card-body">
        <h4>
          <a class="link-primary" href="/restaurants/{{this.id}}">{{this.name}}</a>
        </h4>
        <span class="badge bg-secondary">收藏數：{{this.favoritedCount}}</span>
        <p style="white-space: break-spaces;">{{this.description}}</p>
        <a href="/restaurants/{{this.id}}" class="btn btn-info">Show</a>
        {{#if this.isFavorited }}
          <form action="/favorite/{{this.id}}?_method=DELETE" method="POST" style="display: contents;">
            <button type="submit" class="btn btn-danger">移除最愛</button>
          </form>
        {{else}}
          <form action="/favorite/{{this.id}}" method="POST" style="display: contents;">
            <button type="submit" class="btn btn-primary">加到最愛</button>
          </form>
        {{/if}}
      </div>
    </div>
  </div>
  </div>
  {{/each}}
</div>