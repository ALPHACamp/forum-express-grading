{{> restaurant-tabs route='top-restaurants'}}

<h1>Top 10 人氣餐廳</h1>
<hr />
{{#each restaurants}}
<div class="card mb-3">
  <div class="row">
    <div class="col ms-5 mt-3">
      <div class="col-md-12">
        <a href="/restaurants/{{this.id}}" title="{{this.name}}">
          <h4 class="ml-3">{{this.name}}</h4>
        </a>
      </div>
      <div class="col-md-4">
        <img class="img-responsive center-block mb-2" src="{{this.image}}"
          style="width: 250px; transition: opacity 0.5s; opacity:0;" onload="this.style.opacity=1;">
      </div>
      <span class="bg-secondary badge mb-3">收藏數：{{this.favoritedCount}}</span>
    </div>
    <div class="col-md-9 p-2">
      <p class="m-3" style="white-space: break-spaces;">{{this.description}}</p>
      {{#if this.isFavorited }}
      <form action="/favorite/{{this.id}}?_method=DELETE" method="POST" style="display: contents;">
        <button type="submit" class="btn btn-danger m-3">移除最愛</button>
      </form>
      {{else}}
      <form action="/favorite/{{this.id}}" method="POST" style="display: contents;">
        <button type="submit" class="btn btn-primary m-3">加到最愛</button>
      </form>
      {{/if}}
    </div>
  </div>
</div>
{{/each}}