{{> restaurant-tabs route='topRestaurants'}}
<h1>Top 10 人氣餐廳</h1>
<hr />

{{#each restaurants}}
<div class="card mb-3" style="max-width: 540px; margin: auto">
  <div class="row g-0">
    <div class="col-md-4">
      <a href="/restaurants/{{this.id}}">
        {{#if this.image}}
        <img src="{{this.image}}" class="w-100" />
        {{else}}
        <img src="/thor-love-thunder.jpg" class="w-100" />
        {{/if}}
      </a>
    </div>

    <div class="col-md-8">
      <div class="card-body">
        <h5 class="card-title">
          <a href="/restaurants/{{this.id}}">
            {{ this.name }}
          </a>
        </h5>
        <span class="badge bg-secondary">
          追蹤人數：{{ this.favoritedCount }}
        </span>
        <p class="card-text">
          {{ this.description }}
        </p>

        <a class="btn btn-primary me-2" href="/restaurants/{{this.id}}">
          Show
        </a>

        {{#if this.isFavorited }}
        <form action="/favorite/{{this.id}}?_method=DELETE" method="POST" style="display: contents;">
          <button type="submit" class="btn btn-danger">
            移除最愛
          </button>
        </form>
        {{else}}
        <form action="/favorite/{{this.id}}" method="POST" style="display: contents;">
          <button type="submit" class="btn btn-primary">
            加到最愛
          </button>
        </form>
        {{/if}}

      </div> {{!-- end card body --}}
    </div> {{!-- end class="col-md-8" --}}
  </div> {{!-- end class="row g-0" --}}
</div> {{!-- end class="card mb-3" --}}
{{/each}}