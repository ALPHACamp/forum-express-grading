{{> restaurant-tabs route='top'}}
<h1>Top 10 人氣餐廳</h1>
<hr />
<div class="container d-flex justify-content-center align-items-center">

  <div class="card mb-3" style="max-width: 600px">
    {{#each restaurants}}
    <div class="row g-0">
      <div class="col-md-4">
        <img src="{{this.image}}" class="img-fluid rounded-start" alt="restphoto">
      </div>
      <div class="col-md-8">
        <div class="card-body">
          <h5 class="card-title">{{this.name}}</h5>
          <span class="bg-secondary badge">追蹤人數：{{this.favoritedCount}}</span>
          <p class="card-text">{{this.description}}</p>
          <button type="button" class="btn btn-link">
            <a class="btn btn-link link-primary" href="/restaurants/{{this.id}}">
              Show
            </a>
          </button>
          {{#if this.isFavorited }}
          <form action="/favorite/{{this.id}}?_method=DELETE" method="POST" style="display: contents;">
            <button type="submit" class="btn btn-danger"
              onclick="return confirm(`確定要移除 {{ this.name }} 嗎？`)">移除最愛</button>
          </form>
          {{else}}
          <form action="/favorite/{{this.id}}" method="POST" style="display: contents;">
            <button type="submit" class="btn btn-primary">加到最愛</button>
          </form>
          {{/if}}
        </div>
      </div>
    </div>
    {{/each}}
  </div>
</div>