<div class="row mt-3">
  <div class="card mb-4 shadow-sm d-flex flex-row">
    <div class="col-md-4">
      <img class="card-img-top img-fluid rounded-circle" src="{{user.image}}" alt="Card image cap" width="50px"
        height="50px" style="transition: opacity 0.5s; opacity:0;" onload="this.style.opacity=1;">
    </div>
    <div class="card-body col-md-8">
      <h4 class="card-text fw-bold">{{user.name}}</h4>
      <p class="card-text">{{user.email}}</p>
      <h4 class="card-text fw-bold">{{comment.count}} 已評論餐廳</h4>
      <a class="btn btn-primary" href="/users/{{user.id}}/edit">edit</a>
    </div>
  </div>
</div>
<div class="row mt-3">
  <div class="card mb-4 shadow-sm col-md-12 p-0">
    <div class="card-header">
      {{comment.count}} 已評論餐廳
    </div>
    <div class="card-body d-flex">
      {{#each comment.rows}}
      <div class="col-md-1">
        <a href="/restaurants/{{this.restaurantId}}">
          <img class="" src="{{this.Restaurant.image}}" alt="Card image cap" width="80px" height="80px"
            style="transition: opacity 0.5s; opacity:0;" onload="this.style.opacity=1;">
        </a>
      </div>
      {{/each}}
    </div>
  </div>
</div>