<form action="/admin/categories/{{category.id}}?_method=PUT" method="POST" >
  <div class="mb-4 text-center">
    <h1 class="h3 font-weight-normal mb-3">Edit Category</h1>
  </div>
  <div class="col-auto">
    <input class="form-control" type="text" placeholder="{{category.name}}" name="name">
  </div>
  <div class="col-auto">
    <button class="btn btn-success" type="submit">Update</button>
  </div>
</form>


