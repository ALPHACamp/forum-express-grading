{{>admin-tabs route='categories'}}
{{#if category}}
<div class="d-flex align-items-center pt-3 pb-5 my-3 text-white-50 bg-purple">
  <form class="row" action="/admin/categories/{{category.id}}?_method=PUT" method="POST">
    <div class="col-auto">
      <input class="form-control" type="text" placeholder="Category Name" name="name" value="{{category.name}}">
    </div>
    <div class="col-auto">
      <button class="btn btn-success" type="submit">Update</button>
      <a class="btn btn-link link-secondary" href="/admin/categories">or Create New</a>
    </div>
  </form>
</div>
{{else}}
<div class="d-flex align-items-center pt-3 pb-5 my-3 text-white-50 bg-purple">
  <form class="row" action="/admin/categories" method="POST">
    <div class="col-auto">
      <input class="form-control" type="text" placeholder="Category Name" name="name">
    </div>
    <div class="col-auto">
      <button class="btn btn-success" type="submit">Create</button>
    </div>
  </form>
</div>
{{/if}}
<table class="table align-middle">
  <thead class="thead-dark">
    <tr>
      <th scope="col">#</th>
      <th scope="col">Category Name</th>
      <th scope="col">家數</th>
      <th scope="col">#</th>
    </tr>
  </thead>
  <tbody>
    {{#each categories}}
    <tr>
      <th scope="row">{{this.id}}</th>
      <td>{{this.name}}</td>
      <td>{{this.amount}}</td>
      <td>
        <button type="button" class="btn btn-link">
          <a class="btn btn-link link-primary" href="/admin/categories/{{this.id}}">
            Edit
          </a>
        </button>
        <form action="/admin/categories/{{this.id}}?_method=DELETE" method="POST" style="display: inline;">
          <button type="submit" class="btn btn-link link-danger delete-category" data-name={{this.name}}
            data-id={{this.id}} {{#if this.noRestaurant}} data-need="true" {{else}} "data-need=" false"
            {{/if}}>Delete</button>
        </form>
      </td>
    </tr>
    {{/each}}
  </tbody>
</table>
