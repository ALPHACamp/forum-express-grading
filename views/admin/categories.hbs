{{>admin-tabs route='categories'}}

<div class="d-flex align-items-center pt-3 pb-5 my-3 text-white-50 bg-purple">
    {{#if category}}
    {{!-- edit category --}}
    <form action="/admin/categories/{{category.id}}?_method=PUT" class="row" method="POST">
        <div class="col-auto">
            <input type="text" class="form-control" placeholder="name" name="name" value="{{category.name}}">
        </div>

        <div class="col-auto">
            <button class="btn btn-warning" type="submit">Update</button>
            <a href="/admin/categories" class="btn btn-link link-secondary">or Create New</a>
        </div>
    </form>
    {{else}}
    {{!-- create category --}}
    <form action="/admin/categories" class="row" method="POST">
        <div class="col-auto">
            <input type="text" class="form-control" placeholder="Category Name" name="name">
        </div>

        <div class="col-auto">
            <button class="btn-success" type="submit">Create</button>
        </div>
    </form>
    {{/if}}
</div>

<table class="table align-middle">
    <thead class="thead-dark">
        <tr>
            <th scope="col">#</th>
            <th scope="col">Category Name</th>
            <th scope="col">#</th>
        </tr>
    </thead>
    <tbody>
        {{#each categories}}
        <tr>
            <th scope="row">{{this.id}}</th>
            <td>{{this.name}}</td>
            <td>
                <button type="button" class="btn btn-link">
                    <a class="btn btn-link link-primary" href="/admin/categories/{{this.id}}">
                        Edit
                    </a>
                </button>
                <form action="/admin/categories/{{this.id}}?_method=DELETE" method="POST" style="display: inline;">
                    <button type="submit" class="btn btn-link link-danger">Delete</button>
                </form>
            </td>
        </tr>
        {{/each}}
    </tbody>
</table>
