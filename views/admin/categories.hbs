<h1>餐廳後台</h1>
{{> admin-tabs}}
<br />

<form class="d-md-flex align-items-center" action="/admin/categories{{#if selectedCategory}}/{{selectedCategory.id}}?_method=PUT{{/if}}" method="POST">
  <div>
    <input type="text" class="form-control" name="name" id="name" value="{{selectedCategory.name}}">
  </div>

  <div>
    <button type="submit" class="btn btn-link text-decoration-none">Submit</button>
    {{#if selectedCategory}}
    <span>or</span>
    <a href="/admin/categories" class="btn btn-link text-decoration-none">Create new</a>
    {{/if}}
  </div>
</form>

<br />

<table class="table align-middle">
  <thead class="table-dark">
    <tr>
      <th scope="col">#</th>
      <th scope="col">Category Name</th>
      <th scope="col">#</th>
    </tr>
  </thead>
  <tbody>
    {{#each categories}}
    <tr>
      <th scope="row">{{this.id}}</th>
      <td>{{this.name}}</td>
      <td>
        <a href="/admin/categories/{{this.id}}" class="btn btn-link" style="text-decoration: none;"
            onmouseover="this.style.textDecoration='underline'" onmouseleave="this.style.textDecoration='none'">Edit</a>
        <form action="/admin/categories/{{this.id}}?_method=DELETE" method="POST" style="display: inline;">
          <button type="submit" class="btn btn-link link-danger" style="text-decoration: none;"
            onmouseover="this.style.textDecoration='underline'" onmouseleave="this.style.textDecoration='none'">
            Delete
          </button>
        </form>
      </td>
    </tr>
    {{/each}}
  </tbody>
</table>