{{>admin-tab route='categories'}}

{{#if category}}
{{!-- edit --}}
<form action="/admin/categories/{{ category.id }}?_method=PUT" method="POST" class="row mb-3">
  <div class="col-auto">
    <input type="text" class="form-control" name="name" id="name" placeholder="Category Name"
      value="{{ category.name }}">
  </div>
  <div class="col-auto ms-2">
    <button type="submit" class="btn btn-warning">Update</button>
    <a href="/admin/categories" class="btn btn-link link-secondary">or Create New</a>
  </div>
</form>
{{else}}
{{!-- create --}}
<form action="/admin/categories" method="POST" class="row mb-3">
  <div class="col-auto">
    <input type="text" class="form-control" name="name" id="name" placeholder="Category Name">
  </div>
  <div class="col-auto ms-2">
    <button type="submit" class="btn btn-success">Create</button>
  </div>
</form>
{{/if}}

<table class="table align-middle">
  <thead class="thead-dark">
    <tr>
      <th scope="col">#</th>
      <th scope="col">Category Name</th>
      <th scope="col">#</th>
    </tr>
  </thead>
  <tbody>
    {{#each categories}}
    <tr>
      <th scope="row">{{this.id}}</th>
      <td>{{this.name}}</td>
      <td>
        <button type="button" class="btn btn-link">
          <a class="btn btn-link link-primary" href="/admin/categories/{{this.id}}">
            Edit
          </a>
        </button>
        <form action="/admin/categories/{{this.id}}?_method=DELETE" method="POST" style="display: inline;">
          <button type="submit" class="btn btn-link link-danger">Delete</button>
        </form>
      </td>
    </tr>
    {{/each}}
  </tbody>
</table>
