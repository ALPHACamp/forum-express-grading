{{>admin-interface}}
{{#if category}}
<form action="/admin/categories/{{category.id}}?_method=PUT" class="row row-cols-lg-auto g-3 align-items-center" method="post">
    <div class="col-3">
        <input type="text" class="form-control" name="name" id="name" placeholder="Category Name" value="{{category.name}}" required>
    </div>
    <div class="col-3">
        <button type="submit" class="btn btn-outline-warning">Update</button>
        or
        <a href="/admin/categories" class="btn btn-link">Create New</a>
    </div>
</form>
{{else}}
<form action="/admin/categories" class="row row-cols-auto g-3 align-items-center mb-3" method="post">
    <div class="col-3">
        <input type="text" class="form-control" name="name" id="name" placeholder="Category Name" required>
    </div>
    <div class="col-3">
        <button type="submit" class="btn btn-outline-success">Create</button>
    </div>
</form>
{{/if}}
<table class="table align-middle">
  <thead class="thead-dark">
    <tr>
      <th scope="col">#</th>
      <th scope="col">Category Name</th>
      <th scope="col">#</th>
    </tr>
  </thead>
  <tbody>
    {{#each categories}}
      <tr>
        <th scope="row">{{this.id}}</th>
        <td>{{this.name}}</td>
        <td>
          <button type="button" class="btn btn-link">
            <a class="btn btn-link link-primary" href="/admin/categories/{{this.id}}">
              Edit
            </a>
          </button>
          <form action="/admin/categories/{{this.id}}?_method=DELETE" method="POST" style="display: inline;">
            <button type="submit" class="btn btn-link link-danger" onclick="return confirm(`確定要刪除{{this.name}}嗎`)">Delete</button>
          </form>
        </td>
      </tr>
    {{/each}}
  </tbody>
</table>