{{> admin-tab}}
{{#if category}}
<form action="/admin/categories/{{category.id}}?_method=PUT" method="POST">
{{else}}
<form action="/admin/categories" method="POST">
{{/if}}
  <div class="row mb-3">
    <div class="col-auto">
      <input class="form-control" type="text" name="name" id="name" placeholder="Enter name" value="{{category.name}}" required>
    </div>
    {{#if category}}
    <div class="col-auto"><button type="submit" class="btn btn-warning">Edit</button>
      <a class="btn btn-link link-secondary" href="/admin/categories">or Create New</a>
    </div>
    {{else}}
    <div class="col-auto"><button type="submit" class="btn btn-success">Create</button></div>
    {{/if}}
  </div>
</form>
<br />
<table class="table align-middle">
  <thead class="thead-dark">
    <tr>
      <th scope="col">#</th>
      <th scope="col">Name</th>
      <th scope="col"></th>
    </tr>
  </thead>
  <tbody>
    {{#each categories}}
      <tr>
        <th scope="row">{{inc @index}}</th>
        <td>{{this.name}}</td>
        <td>
          <button type="button" class="btn btn-link">
            <a class="btn btn-link link-primary" href="/admin/categories/{{this.id}}">
              Edit
            </a>
          </button>
          <form action="/admin/categories/{{this.id}}?_method=DELETE" method="POST" style="display: inline;">
            <button type="submit" class="btn btn-link link-danger" onclick="return confirm(`確定要刪除 {{ this.name }} 嗎？`)">Delete</button>
          </form>
        </td>
      </tr>
    {{/each}}
  </tbody>
</table>
