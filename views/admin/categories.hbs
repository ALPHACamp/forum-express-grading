<link rel="stylesheet" href="/stylesheets/style.css">

<h1>餐廳後台</h1>

<nav class="mb-5">
  <ul class="nav nav-tabs">
    <li class="nav-item">
      <a class="nav-link " href="/admin/restaurants">Restaurants</a>
    </li>
    <li class="nav-item">
      <a class="nav-link" href="/admin/users">Users</a>
    </li>
    <li class="nav-item">
      <a class="nav-link active" href="/admin/categories">Category</a>
    </li>
  </ul>
</nav>
<form action="/admin/categories" method="post">
  <div class="row g-3 align-items-center mb-5">
    <div class="col-auto align-items-center">
      <input type="text" id="categoryName" name="category" class="form-control ">
    </div>
    <div class="col-auto">
      <button type="submit" class="btn btn-success">Create</button>
    </div>
  </div>
</form>

<table class="table align-middle">
  <thead class="thead-dark">
    <tr>
      <th scope="col">#</th>
      <th scope="col">Category Name</th>
      <th scope="col"></th>
    </tr>
  </thead>
  <tbody>
    {{#each categories}}
    <tr>
      <th scope="row">{{this.id}}</th>
      <td>
        <p>{{this.name}}</p>
      </td>
      <td>
        <button type="button" class="btn btn-link">
          <a class="btn btn-link link-primary" href="/admin/categories/{{this.id}}/edit">
            Edit
          </a>
        </button>
        <form action="/admin/categories/{{this.id}}?_method=DELETE" method="POST" style="display: inline;">
          <button type="submit" class="btn btn-link link-danger"
            onclick="return confirm(`確定要刪除 {{ this.name }} 嗎？`)">Delete</button>
        </form>
      </td>
    </tr>
    {{/each}}
  </tbody>
</table>