<h1>餐廳後台</h1>
<ul class='nav nav-tabs mb-3'>
	<li class='nav-item'>
		<a class='nav-link active' href='/admin/restaurants'>Restaurants</a>
	</li>
	<li class='nav-item'>
		<a class='nav-link' href='/admin/users'>Users</a>
	</li>
</ul>
<a href='/admin/restaurants/create'>
	<button type='button' class='btn btn-primary'>New Restaurant</button>
</a>
<br />
<br />
<table class='table align-middle'>
	<thead class='thead-dark'>
		<tr>
			<th scope='col'>#</th>
			<th scope='col'>Name</th>
			<th scope='col'></th>
		</tr>
	</thead>
	<tbody>
		{{#each restaurants}}
			<tr>
				<th scope='row'>{{this.id}}</th>
				<td>{{this.name}}</td>
				<td>
					<button type='button' class='btn btn-link'>
						<a class='btn btn-link link-primary' href='/admin/restaurants/{{this.id}}'>
							Show
						</a>
					</button>
					<button type='button' class='btn btn-link'>
						<a class='btn btn-link link-primary' href='/admin/restaurants/{{this.id}}/edit'>
							Edit
						</a>
					</button>
					<form
						action='/admin/restaurants/{{this.id}}?_method=DELETE'
						method='POST'
						style='display: inline;'
					>
						<button
							type='submit'
							class='btn btn-link link-danger'
							onclick='return confirm(`Confirm to delete {{this.name}} ?`)'
						>Delete</button>
					</form>
				</td>
			</tr>
		{{/each}}
	</tbody>
</table>