<h1>餐廳後台</h1>
<div class="btn-group" role="group" aria-label="Basic outlined example">
  <button type="button" class="btn btn-outline-primary" onclick="window.location.href='/admin/restaurants'">Restaurants</button>
  <button type="button" class="btn btn-outline-dark" onclick="window.location.href='/admin/restaurants/create'">New Restaurant</button>
  <button type="button" class="btn btn-outline-dark" onclick="window.location.href='/admin/users'">Users</button>
</div>
<br />
<br />
<table class="table align-middle">
  <thead class="thead-dark">
    <tr>
      <th scope="col">#</th>
      <th scope="col">Name</th>
      <th scope="col"></th>
    </tr>
  </thead>
  <tbody>
    {{#each restaurants}}
      <tr>
        <th scope="row">{{this.id}}</th>
        <td>{{this.name}}</td>
        <td>
          <button type="button" class="btn btn-link">
            <a class="btn btn-link link-primary" href="/admin/restaurants/{{this.id}}">
              Show
            </a>
          </button>
          <button type="button" class="btn btn-link">
            <a class="btn btn-link link-primary" href="/admin/restaurants/{{this.id}}/edit">
              Edit
            </a>
          </button>
          <form action="/admin/restaurants/{{this.id}}?_method=DELETE" method="POST" style="display: inline;">
            <button type="submit" class="btn btn-link link-danger" onclick="return confirm(`really want to delete {{this.name}} ?`)">Delete</button>
          </form>
        </td>
      </tr>
    {{/each}}
  </tbody>
</table>