<h1>餐廳後台</h1>
<div>
  <ul class="nav">
    <li class="nav-item">
      <a class="nav-link p-0 me-2" href="/admin/restaurants">Restaurants</a>
    </li>
    <p>|</p>
    <li class="nav-item">
      <a class="nav-link p-0 ms-2" href="/admin/users">Users</a>
    </li>
  </ul>
</div>
<a href='/admin/restaurants/create'>
  <button type="button" class="btn btn-secondary">New Restaurant</button>
</a>
<br />
<br />
<table class="table align-middle">
  <thead class="thead-dark">
    <tr>
      <th scope="col">#</th>
      <th scope="col">Name</th>
      <th scope="col">Category</th>
      <th scope="col"></th>
    </tr>
  </thead>
  <tbody>
    {{#each restaurants}}
      <tr>
        <th scope="row">{{this.id}}</th>
        <td>{{this.name}}</td>
        <td>{{this.Category.name}}</td>
        <td>
          <button type="button" class="btn btn-link">
            <a class="btn btn-link link-primary" href="/admin/restaurants/{{this.id}}">
              Show
            </a>
          </button>
          <button type="button" class="btn btn-link">
            <a class="btn btn-link link-primary" href="/admin/restaurants/{{this.id}}/edit">
              Edit
            </a>
          </button>
          <form action="/admin/restaurants/{{this.id}}?_method=DELETE" method="POST" style="display: inline;">
            <button type="submit" class="btn btn-link link-danger" onclick="return confirm(`確定要刪除 {{ this.name }} 嗎？`)">Delete</button>
          </form>
        </td>
      </tr>
    {{/each}}
  </tbody>
</table>