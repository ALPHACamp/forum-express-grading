<h1>餐廳後台</h1>

<ul class="nav nav-tabs">
  <li class="nav-item">
    <a href='/admin/restaurants' class="btn-link nav-link active"> Restaurants </a>
  </li>
  <li class="nav-item">
    <a href='/admin/users' class="btn-link nav-link"> Users </a>
  </li>
  <a href='/admin/restaurants/create' style="margin-left: auto;">
    <button type="button" class="btn btn-secondary">New Restaurant</button>
  </a>
</ul>
<br />
{{!-- <br /> --}}
<table class="table align-middle">
  <thead class="thead-dark">
    <tr style="background-color: black;">
      <th scope="col" style="color: white;">#</th>
      <th scope="col" style="color: white;">Name</th>
      <th scope="col" style="color: white;">Category</th>
      <th scope="col" style="color: white;">Administration Options</th>
    </tr>
  </thead>
  <tbody>
    {{#each restaurants}}
    <tr>
      <th scope="row">{{this.id}}</th>
      <td>{{this.name}}</td>
      <td>{{this.Category.name}}</td>
      <td>
        <button type="button" class="btn btn-link">
          <a class="btn btn-link link-primary" href="/admin/restaurants/{{this.id}}">
            Show
          </a>
        </button>
        <button type="button" class="btn btn-link">
          <a class="btn btn-link link-primary" href="/admin/restaurants/{{this.id}}/edit">
            Edit
          </a>
        </button>
        <form action="/admin/restaurants/{{this.id}}?_method=DELETE" method="POST" style="display: inline;">
          <button type="submit" class="btn btn-link link-danger"
            onclick="return confirm(`確定要刪除{{name}}嗎?`)">Delete</button>
        </form>
      </td>
    </tr>
    {{/each}}
  </tbody>
</table>