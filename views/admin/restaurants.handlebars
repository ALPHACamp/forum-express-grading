<h1>餐廳後台</h1>
<ul class="nav nav-pills align-items-center mb-3">
  <li class="nav-item">
    <a class="nav-link px-0" aria-current="page" href="/admin/restaurants">Restaurants</a>
  </li>
  <li class="px-2">|</li>
  <li class="nav-item">
    <a class="nav-link px-0" href="/admin/users">Users</a>
  </li>
</ul>
<a href='/admin/restaurants/create'>
  <button type="button" class="btn btn-primary">New Restaurant</button>
</a>
<br />
<table class="table align-middle">
  <tbody>
    <div class="row mt-3">
      {{#each restaurants}}
      <div class="col-md-4">
        <div class="card mb-4 shadow-sm">
          <a href="/restaurants/{{this.id}}">
            <img class="card-img-top img-fluid" src="{{this.image}}" alt="Card image cap" width="286px" height="180px"
              style="transition: opacity 0.5s; opacity:0;" onload="this.style.opacity=1;">
          </a>
          <div class="card-body">
            <p class="card-text">
              <a href="/restaurants/{{this.id}}">
                {{this.name}}
              </a>
            </p>
            <span class="badge bg-secondary">{{this.Category.name}}</span>
            <p class="card-text text-truncate">{{this.description}}</p>
          </div>
        </div>
      </div>
      {{/each}}
</div> 
  </tbody>
</table>
