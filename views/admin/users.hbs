<h1>餐廳後台</h1>
<a href='/admin/restaurants'>
  <button type="button" class="btn btn-primary">Restaurants</button>
</a>
<br />
<br />
<table class="table align-middle">
  <thead class="thead-dark">
    <tr>
      <th scope="col">#</th>
      <th scope="col">Name</th>
      <th scope="col">Email</th>
      <th scope="col">Role</th>
      <th scope="col">#</th>
    </tr>
  </thead>
  <tbody>
    {{#each user}}
    <tr>
      <th scope="row">{{this.id}}</th>
      <td>{{this.name}}</td>
      <td>{{this.email}}</td>
          {{#if this.isAdmin}}
          <td>admin</td>
          {{else}}
          <td>user</td>
          {{/if}}
      <td>
        <form action="/admin/users/{{this.id}}?_method=PATCH" method="POST" style="display: inline;">
          {{!-- 加入onclick return confirm 彈出視窗功能確認，以加深刪除功能 --}}
          <button type="submit" class="btn btn-link link-primary" style="text-decoration: none;">
            {{#if this.isAdmin}}
            set as user
            {{else}}
            set as admin
            {{/if}}
          </button>
        </form>
</td>
    </tr>
    {{/each}}
  </tbody>
</table>