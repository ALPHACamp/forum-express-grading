<h1>餐廳後台</h1>
<br />
<br />
<!--切換到 user 頁-->
{{> tabs}}
<br />
<br />
<table class="table align-middle">
  <thead class="thead-dark">
    <tr>
      <th scope="col">#</th>
      <th scope="col">Name</th>
      <th scope="col">Email</th>
      <th scope="col">Role</th>
      <th scope="col">#</th>
    </tr>
  </thead>
  <tbody>
    {{#each users}}
    <tr>
      <th scope="row">{{this.id}}</th>
      <td>{{this.name}}</td>
      <td>{{this.email}}</td>

      {{#if this.isAdmin}}
      <td>admin</td>
      <td>
        <form action="/admin/users/{{ this.id }}?_method=PATCH" method="POST">
          <button type="submit" class="btn btn-link link-primary" onclick="alert('權限改變')">set as user</button>
        </form>
      </td>
      {{else}}
      <td>user</td>
      <td>
        <form action="/admin/users/{{ this.id }}?_method=PATCH" method="POST">
          <button type="submit" class="btn btn-link link-primary" onclick="alert('權限改變')">set as admin</button>
        </form>
      </td>
      {{/if}}
    </tr>
    {{/each}}
  </tbody>
</table>

