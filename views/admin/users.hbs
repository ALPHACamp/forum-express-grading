<h1>餐廳後台</h1>
<a href='/admin/restaurants/create'>
  <button type="button" class="btn btn-primary">New Restaurant</button>
</a>
<ul class="nav nav-tabs">
  <li class="nav-item">
    <a class="nav-link" aria-current="page" href="/admin/restaurants">Restaurants</a>
  </li>
  <li class="nav-item">
    <a class="nav-link" href="/admin/users">Users</a>
  </li>
</ul>
<br />
<br />
<table class="table align-middle">
  <thead class="thead-dark">
    <tr>
      <th scope="col">id#</th>
      <th scope="col">Name</th>
      <th scope="col">Email</th>
      <th scope="col">Role</th>
      <th scope="col">Change Role#</th>
    </tr>
  </thead>
  <tbody>
    {{#each users}}
      <tr>
        <th scope="row">{{this.id}}</th>
        <td>{{this.name}}</td>
        <td>{{this.email}}</td>
        <td>
          {{#if this.isAdmin}}
          admin
          {{else}}
          user
          {{/if}}
        </td>
        <td>
          {{#if this.isAdmin}}
          <form action="/admin/users/{{ this.id }}?_method=PATCH" method="POST">
            <input type="hidden" name="isAdmin" value="false">
            <button type="submit" class="btn btn-link">set as USER</button>
          </form>
          {{else}}
          <form action="/admin/users/{{ this.id }}?_method=PATCH" method="POST">
            <input type="hidden" name="isAdmin" value="true">
            <button type="submit" class="btn btn-link">set as ADMIN</button>
          </form>
          {{/if}}
        </td>
      </tr>
    {{/each}}
  </tbody>
</table>