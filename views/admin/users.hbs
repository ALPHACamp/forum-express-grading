<table class="table align-middle">
  <thead class="thead-dark" style="background-color: black; color:white">
    <tr>
      <th scope="col">#</th>
      <th scope="col">Name</th>
      <th scope="col">email</th>
      <th scope="col">Role</th>
      <th scope="col">#</th>
    </tr>
  </thead>
  <tbody>
    {{#each users}}
      <tr>
        <th scope="row">{{this.id}}</th>
        <td>{{this.name}}</td>
        <td>{{this.email}}</td>
        <td>{{#if this.isAdmin}}admin 
            {{else}}user{{/if}}</td>
        <td> 
          <form action="/admin/restaurants/{{this.id}}?_method=DELETE" method="POST" style="display: inline;">
            <button type="submit" class="btn btn-link link-primary">{{#if this.isAdmin}}set as user{{else}}set as admin{{/if}}</button>
          </form>
        </td>
      </tr>
    {{/each}}
  </tbody>
</table>