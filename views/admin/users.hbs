<h1>餐廳後台</h1>
<div>
  <ul class="nav nav-tabs d-flex align-items-center">
    <li class="nav-item">
      <a class="nav-link" href="/admin/restaurants">Restaurants</a>
    </li>
    <li class="nav-item">|</li>
    <li class="nav-item">
      <a class="nav-link" href="/admin/users">Users</a>
    </li>
  </ul>
</div>
<br />
<br />
<table class="table align-middle">
  <thead class="table-dark">
    <tr>
      <th scope="col">#</th>
      <th scope="col">Name</th>
      <th scope="col">Email</th>
      <th scope="col">Role</th>
      <th scope="col">#</th>
    </tr>
  </thead>
  <tbody>
    {{#each users}}
    <tr>
      <th scope="row">{{this.id}}</th>
      <td>{{this.name}}</td>
      <td>{{this.email}}</td>
      {{#if this.isAdmin}}
      <td>admin</td>
      {{else}}
      <td>user</td>
      {{/if}}
      <td>
        <form action="/admin/users/{{this.id}}?_method=PATCH" method="POST" style="display: inline;">
        {{#if this.isAdmin}}
        <button type="submit" class="btn btn-link link-primary">set as user</button>
        {{else}}
        <button type="submit" class="btn btn-link link-primary">set as admin</button>
        {{/if}}
        </form>
      </td>
    </tr>
    {{/each}}
  </tbody>
</table>