<h1>餐廳後台</h1>
<ul class="nav nav-tabs">
  <li class="nav-item">
    <a class="nav-link" href="/admin/restaurants">Restaurants</a>
  </li>
  <li class="nav-item">
    <a class="nav-link" href="/admin/users">Users</a>
  </li>
</ul>
<table class="table">
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">Name</th>
      <th scope="col">Email</th>
      <th scope="col">Role</th>
      <th scope="col">#</th>
    </tr>
  </thead>
  <tbody>
    
    {{#each users}}
    <form action="/admin/users/{{this.id}}?_method=PATCH" method="POST" style="display: inline;">
    <tr>
      <th scope="row">{{this.id}}</th>
      <td>{{this.name}}</td>
      <td>{{this.email}}</td>
      
      {{#if this.isAdmin}}
        <td>admin</td>
        <td>
          <button type="submit" class="btn btn-link">set as user</button>
        </td>
      {{else}}
        <td>user</td>
        <td>
          <button type="submit" class="btn btn-link">set as admin</button>
        </td>
      {{/if}}
      
    </tr>
    </form>
    {{/each}}
    
  </tbody>

</table>