<h1 class="mb-3">餐廳後台</h1>
<a class="btn link-primary p-0" style="display: inline;" href="/admin/restaurants">Restaurants</a>
<a class="btn link-primary" style="display: inline;" href="/admin/users">Users</a>
<br />
<table class="table align-middle mt-3">
  <thead class="table-dark">
    <tr>
      <th scope="col">#</th>
      <th scope="col">Name</th>
      <th scope="col">Email</th>
      <th scope="col">Role</th>
      <th scope="col">#</th>
    </tr>
  </thead>
  <tbody>
    {{#each users}}
    <tr>
      <th scope="row">{{this.id}}</th>
      <td>{{this.name}}</td>
      <td>{{this.email}}</td>
      <td>{{#if this.isAdmin}} admin {{else}} user {{/if}}</td>
      <td>
        <form action="/admin/users/{{this.id}}?_method=PATCH" method="POST">
          <button type="submit" class="btn link-primary">
            set as {{#if this.isAdmin}} user {{else}} admin {{/if}}
          </button>
        </form>
      </td>
    </tr>
    {{/each}}
  </tbody>
</table>