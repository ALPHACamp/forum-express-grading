<h1>餐廳後台</h1>
<div>
  <a href='/admin/restaurants'>Restaurants</a>
  <span> | </span>
  <a href='/admin/users'>Users</a>
</div>
<br />
<br />
<table class='table align-middle'>
  <thead class='thead-dark'>
    <tr>
      <th scope='col'>#</th>
      <th scope='col'>Name</th>
      <th scope='col'>Email</th>
      <th scope='col'>Role</th>
      <th scope='col'>#</th>
    </tr>
  </thead>
  <tbody>
    {{#each users}}
      <tr>
        <th scope='row'>{{this.id}}</th>
        <td>{{this.name}}</td>
        <td>{{this.email}}</td>
        <td>{{this.role}}</td>
        <td>
          <form
            action='/admin/users/{{this.id}}?_method=PATCH'
            method='POST'
            style='display: inline;'
          >
            <button
              type='submit'
              class='btn btn-link link-primary'
            >{{this.setAs}}</button>
          </form>
        </td>
      </tr>
    {{/each}}
  </tbody>
</table>