<h1>餐廳後台</h1>
<nav class="nav">
  <a class="nav-link active" aria-current="page" href="/admin/restaurants">Restaurants</a>
  <p class="nav-link"> | </p>
  <a class="nav-link" href="/admin/users">Users</a>
</nav>

<a class="d-block mb-0" href='/admin/restaurants/create'>
  <button type="button" class="btn btn-primary">New Restaurant</button>
</a>
<br />

<table class="table align-middle">
  <thead class="thead-dark">
    <tr>
      <th scope="col">#</th>
      <th scope="col">Name</th>
      <th scope="col">Email</th>
      <th scope="col">Role</th>
      <th scope="col">#</th>
    </tr>
  </thead>
  <tbody>
    {{#each users}}
    <tr>
      <th scope="row">{{ addOne @index }}</th>
      <td>{{ this.name }}</td>
      <td>{{ this.email }}</td>
      <td>
        {{#if this.isAdmin }}
        admin
        {{else}}
        user
        {{/if}}
      </td>
      <td>
        <form action="/admin/users/{{this.id}}?_method=PATCH" method="POST">
          <button type="submit" style="border: none; background:none; color:midnightblue">
            {{#if this.isAdmin }}
            set as user
            {{else}}
            set as admin
            {{/if}}
          </button>
        </form>
      </td>
    </tr>
    {{/each}}
  </tbody>
</table>