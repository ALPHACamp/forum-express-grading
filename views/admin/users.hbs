<h1>餐廳後台</h1>
<br />
<br />
<ul class="nav">
  <li class="nav-item">
    <a class="nav-link active" aria-current="page" href="/admin/restaurants">Restaurants</a>
  </li>
  <li class="nav-item">
    <a class="nav-link" href="/admin/users">Users</a>
  </li>
</ul>
<table class="table align-middle">
  <thead class="thead-dark">
    <tr>
      <th scope="col">#</th>
      <th scope="col">Name</th>
      <th scope="col">Email</th>
      <th scope="col">Role</th>
      <th scope="col">#</th>
      <th scope="col"></th>
    </tr>
  </thead>
  <tbody>
    {{#each users}}
    <tr>
      <th scope="row" style="width:10%;">{{this.id}}</th>
      <td style="width:20%;">{{this.name}}</td>
      <td style="width:30%;">{{this.email}}</td>
      <td style="width:20%;">{{this.isAdmin}}</td>
      <td style="width:20%;">
        <form action="/admin/users/{{this.id}}?_method=PATCH" method="POST" style="display: inline;">
          <button type="submit" class="btn btn-link link-danger">{{#checkAdmin this.isAdmin}}{{/checkAdmin}}</button>
        </form>
      </td>
    </tr>
    {{/each}}
  </tbody>
</table>