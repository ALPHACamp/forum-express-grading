<h1>餐廳後台</h1>
<ul class="nav nav-tabs mt-3">
  <li class="nav-item">
    <a class="nav-link" aria-current="page" href="/admin/restaurants">Restaurants</a>
  </li>
  <li class="nav-item">
    <a class="nav-link" href="/admin/users">Users</a>
  </li>
</ul>

<table class="table align-middle mt-3">
  <thead class="thead-dark">
    <tr>
      <th scope="col">#</th>
      <th scope="col">Name</th>
      <th scope="col">Email</th>
      <th scope="col">Role</th>
      <th scope="col">#</th>
    </tr>
  </thead>
  <tbody>
    {{#each users}}
    <tr>
      <th scope="row">{{this.id}}</th>
      <td>{{this.name}}</td>
      <td>{{this.email}}</td>
      
      <form action="/admin/users/{{this.id}}?_method=PATCH" method="POST" style="display: inline;">
        {{#if this.isAdmin}}
          <td>admin</td>
          <td><button type="submit" class="btn btn-link link-primary">set as user</button></td>
        {{else}}
          <td>user</td>
          <td><button type="submit" class="btn btn-link link-primary">set as admin</button></td>
        {{/if}}
      </form>
    </tr>
    {{/each}}
  </tbody>
</table>

