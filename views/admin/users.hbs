{{>admin-tabs route='users'}}
<br />
<br />
<table class="table align-middle">
  <thead class="thead-dark">
    <tr>
      <th scope="col">#</th>
      <th scope="col">Name</th>
      <th scope="col">Email</th>
      <th scope="col">Role</th>
      <th scope="col">Action</th>
    </tr>
  </thead>
  <tbody>
    {{#each users}}
      <tr>
        <th scope="row">{{this.id}}</th>
        <td>{{this.name}}</td>
        <td>{{this.email}}</td>
        <td>{{#ifCond this.isAdmin 1}}Admin{{else}}User{{/ifCond}}</td>
        <td>
          <form action="/admin/users/{{this.id}}?_method=PATCH" method="POST" style="display: inline;">
            <button type="submit" class="btn btn-link link-info text-decoration-none">{{#ifCond this.isAdmin 1}}set as user{{else}}set as admin{{/ifCond}}</button>
          </form>
        </td>
      </tr>
    {{/each}}
  </tbody>
</table>