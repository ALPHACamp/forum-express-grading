{{>admin-tabs route='users'}}
<table class="table align-middle">
  <thead class="thead-dark table-dark">
    <tr>
      <th scope="col">#</th>
      <th scope="col">Name</th>
      <th scope="col">Email</th>
      <th scope="col">Role</th>
      <th scope="col">#</th>
    </tr>
  </thead>
  <tbody>
    {{#each users}}
    <tr>
      <th scope="row">{{this.id}}</th>
      <td>{{this.name}}</td>
      <td>{{this.email}}</td>
      {{#if this.isAdmin}}
      <td>
        <p class="m-2">admin</p>
      </td>
      <td>
        <form action="/admin/users/{{ this.id }}?_method=PATCH" method="POST">
          <button type="submit" class="btn btn-link link-primary"
          onclick="return confirm(`user無權使用後台，確定把權限降為「user」嗎?`)">set as user</button>
        </form>
      </td>
      {{else}}
      <td>
        <p class="m-2">user</p>
      </td>
      <td>
        <form action="/admin/users/{{ this.id }}?_method=PATCH" method="POST">
          <button type="submit" class="btn btn-link link-primary" 
          onclick="return confirm(`admin有權使用後台，確定把權限升為「admin」嗎?`)">set as admin</button>
        </form>
      </td>
      {{/if}}
    </tr>
    {{/each}}
  </tbody>
</table>