<h1>餐廳後台</h1>
<ul class="nav nav-tabs mb-3">
  <li class="nav-item">
    <a class="nav-link " aria-current="page" href="/admin/restaurants">Restaurants</a>
  </li>
  <li class="nav-item">
    <a class="nav-link active" href="/admin/users">Users</a>
  </li>
</ul>
<table class="table align-middle">
  <thead class="table-dark">
    <tr>
      <th scope="col">#</th>
      <th scope="col">Name</th>
      <th scope="col">email</th>
      <th class="col">Role</th>
      <th class="col">#</th>
    </tr>
  </thead>
  <tbody>
    {{#each users}}
      <tr>
        <th scope="row">{{this.id}}</th>
        <td>{{this.name}}</td>
        <td>{{this.email}}</td>
        <td>{{#if this.isAdmin}}admin{{else}}user{{/if}}</td>
        <td>
          <form action="/admin/users/{{this.id}}?_method=PATCH" method="POST">
            <button type="submit" class="btn btn-link">
              set as 
              {{#if this.isAdmin}}
              user
              {{else}}
              admin
              {{/if}}
              </button>
          </form>
        </td>
      </tr>
    {{/each}}
  </tbody>
</table>