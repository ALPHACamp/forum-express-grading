{{>admin-tabs route='users'}}

<table class="table">
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">Name</th>
      <th scope="col">Email</th>
      <th scope="col">Role</th>
      <th scope="col">#</th>
    </tr>
  </thead>
  <tbody>
    {{#each users}}
      <tr>
        <th scope="row">{{this.id}}</th>
        <td>{{this.name}}</td>
        <td>{{this.email}}</td>
        <td>{{#if isAdmin}}admin{{else}}user{{/if}}</td>
        <td>{{#if isAdmin}} 
          <form action="/admin/users/{{this.id}}?_method=PATCH" method="POST">
            <button type="submit" class="btn btn-link">set as user</button>
          </form>
          {{else}}
          <form action="/admin/users/{{this.id}}?_method=PATCH" method="POST">
            <button type="submit" class="btn btn-link">set as admin</button>
          </form>
          {{/if}}
        </td>
      </tr>
    {{/each}}
  </tbody>
</table>