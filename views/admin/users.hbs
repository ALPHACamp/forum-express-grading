<h1>餐廳後台</h1>
<div class="btn-group" role="group" aria-label="Basic outlined example">
  <button type="button" class="btn btn-outline-primary" onclick="window.location.href='/admin/users'">Users</button>
  <button type="button" class="btn btn btn-outline-dark" onclick="window.location.href='/admin/restaurants'">Restaurants</button>
</div>
<br />
<br />
<table class="table align-middle">
  <thead class="thead-dark">
    <tr>
      <th scope="col">#</th>
      <th scope="col">Name</th>
      <th scope="col">Email</th>
      <th scope="col">Role</th>
      <th scope="col">#</th>
    </tr>
  </thead>
  <tbody>
    {{#each users}}
      <tr>
        <th scope="row">{{this.id}}</th>
        <td>{{this.name}}</td>
        <td>{{this.email}}</td>
        <td>{{#if this.isAdmin}}admin{{else}}user{{/if}}</td>
        <td>
          <form action="/admin/users/{{this.id}}?_method=PATCH" method="POST" style="display: inline;">
          {{#if this.isAdmin}}
            <button type="submit" class="btn btn-link link-primary" onclick="return confirm(`really want to set {{this.name}} as user?`)">set as user</button>
          {{else}}
            <button type="submit" class="btn btn-link link-primary" onclick="return confirm(`really want to set {{this.name}} as admin?`)">set as admin</button>
          {{/if}}
          </form>
        </td>
      </tr>
    {{/each}}
  </tbody>
</table>