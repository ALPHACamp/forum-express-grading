<h1><strong>餐廳後台</strong></h1>
<div class="container p-0 py-3">
  <a class="btn btn-link link-primary p-0" href="/admin/restaurants/">
    Restaurants
  </a>
  <a class="btn btn-link link-primary rounded-0 p-0 px-1" style="border-left: 2px solid black;" href="/admin/users/">
    Users
  </a>
</div>
<table class="table">
  <thead>
    <tr class="table-dark">
      <th scope="col">#</th>
      <th scope="col">Name</th>
      <th scope="col">Email</th>
      <th scope="col">Role</th>
      <th scope="col">#</th>
    </tr>
  </thead>
  <tbody>
    {{#each users}}
    <tr>
      <th scope="row">{{this.id}}</th>
      <td>{{this.name}}</td>
      <td>{{this.email}}</td>
      {{#if isAdmin}}
      <td>admin</td>
      <td>
        <form action="/admin/users/{{this.id}}?_method=PATCH" method="POST" style="display: inline;">
          <button type="submit" class="btn btn-link">
            set as user
          </button>
        </form>
      </td>
      {{else}}
      <td>user</td>
      <td>
        <form action="/admin/users/{{this.id}}?_method=PATCH" method="POST" style="display: inline;">
          <button type="submit" class="btn btn-link">
            set as admin
          </button>
        </form>
      </td>
      {{/if}}
    </tr>
    {{/each}}
  </tbody>
</table>