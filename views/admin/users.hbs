<h1>餐廳後台</h1>
<a href='/admin/restaurants/create'>
  <button type="button" class="btn btn-primary">New Restaurant</button>
</a>
<br />
<span>
  <a href='/admin/restaurants'>
    <button type="button" class="btn btn-link">Restaurants</button>
  </a>
  <a href='/admin/users'>
    <button type="button" class="btn btn-link">Users</button>
  </a>
</span>
<br />
<table class="table align-middle">
  <thead class="thead-dark">
    <tr>
      <th scope="col">#</th>
      <th scope="col">Name</th>
      <th scope="col">Email</th>
      <th scope="col">Role</th>
      <th scope="col">#</th>
    </tr>
  </thead>
  <tbody>
    {{#each users}}
    <tr>
      <th>{{this.id}}</th>
      <td>{{this.name}}</td>
      <td>{{this.email}}</td>
      <td>{{role this.isAdmin}}</td>
      <td>
        <form action="/admin/users/{{this.id}}?_method=PATCH" method="POST">
          <button type="submit" class="btn btn-link">
            set as {{roleToBe this.isAdmin}}
          </button>
        </form>
      </td>
    </tr>
    {{/each}}
  </tbody>
</table>