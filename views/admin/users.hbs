{{> admin-tabs route='users'}}

<br />
<a href='/admin/restaurants/create'>
  <button type='button' class='btn btn-primary'>New Restaurant</button>
</a>
<br />
<br />
<table class='table align-middle'>
  <thead class='thead-dark table-dark'>
    <tr>
      <th scope='col'>#</th>
      <th scope='col'>Name</th>
      <th scope='col'>Email</th>
      <th scope='col'>Role</th>
      <th scope='col'>#</th>
    </tr>
  </thead>
  <tbody>
    {{#each users}}
      <tr>
        <th scope='row'>{{this.id}}</th>
        <td>{{this.name}}</td>
        <td>{{this.email}}</td>
        {{#if this.isAdmin}}
        <td>admin</td>
        <td>
          <form
            action='/admin/users/{{this.id}}?_method=PATCH'
            method='POST'
            style='display: inline;'
          >
            <button type="submit" class="btn btn-link user-auth-change" data-name={{this.name}} {{#ifCon this.id ../user.id}} data-self="true"{{/ifCon}}>set as user</button>
          </form>
        </td>
        {{else}}
        <td>user</td>
        <td>
          <form
            action='/admin/users/{{this.id}}?_method=PATCH'
            method='POST'
            style='display: inline;'
          >
            <button type="submit" class="btn btn-link user-auth-change" data-name={{this.name}}>set as admin</button>
          </form>
        </td>
        {{/if}}
      </tr>
    {{/each}}
  </tbody>
</table>