{{>admin-tabs route='users'}}

<br />
<br />
<table class="table align-middle">
  <thead class="thead-dark">
    <tr>
      <th scope="col">#</th>
      <th scope="col">Name</th>
      <th scope="col">Email</th>
      <th scope="col">Role</th>
      <th scope="col">#</th>
    </tr>
  </thead>
  <tbody>
    {{#each users}}
    <tr>
      <th scope="row">{{this.id}}</th>
      <td class="name">
        {{#if this.isAdmin }}
        <img src="https://maurits.tv/data/garrysmod/wiki/wiki.garrysmod.com/images/c/cf/Shield.png" alt="">
        {{else}}
        <img src="https://maurits.tv/data/garrysmod/wiki/wiki.garrysmod.com/images/d/db/User.png" alt="">
        {{/if}}{{this.name}}
      </td>
      <td class="email">{{this.email}}</td>
      <th class="role">
        {{#if this.isAdmin }}
        admin
        {{else}}
        user
        {{/if}}
      </th>
      <th>
        <form action="/admin/users/{{this.id}}?_method=PATCH" method="post">
          <button type="submit" class="btn btn-link">set as {{#if this.isAdmin }} user {{else}} admin {{/if}}</button>
        </form>
      </th>
    </tr>
    {{/each}}
  </tbody>
</table>