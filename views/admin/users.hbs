<h1>餐廳後台</h1>
<ul class="nav nav-tabs">
    <li class="nav-item">
        <a class="nav-link" href="/admin/restaurants">Restaurants</a>
    </li>
    <li class="nav-item">
        <a class="nav-link" href="/admin/users">Users</a>
    </li>
    </ul>
<br />
<br />
<table class="table align-middle">
  <thead class="table-dark">
    <tr>
      <th scope="col">#</th>
      <th scope="col">Name</th>
      <th scope="col">Email</th>
      <th scope="col">Role</th>
      <th scope="col">#</th>
    </tr>
  </thead>
  <tbody>
    {{#each users}}
    <tr>
        <td>{{this.id}}</td>
        <td>{{this.name}}</td>
        <td>{{this.email}}</td>
        {{#if this.isAdmin}}
        <td>admin</td>
        <td><form action="/admin/users/{{this.id}}?_method=PATCH" method="POST" class="mb-0"><button class="btn btn-outline-primary" type="submit">set as user</button></form></td>
        {{else}}
        <td>user</td>
        <td><form action="/admin/users/{{this.id}}?_method=PATCH" method="POST" class="mb-0"><button class="btn btn-outline-primary" type="submit">set as admin</button></form></td>
        {{/if}}
    </tr>
    {{/each}}
    
  </tbody>
</table>