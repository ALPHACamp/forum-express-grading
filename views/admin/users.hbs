<h1>餐廳後台</h1>

<ul class="nav nav-tabs my-4">
  <li class="nav-item">
    <a class="nav-link " href="/admin/restaurants">Restaurants</a>
  </li>
  <li class="nav-item">
    <a class="nav-link active" href="/admin/users">Users</a>
  </li>
</ul>

<a href='/admin/restaurants/create'>
  <button type="button" class="btn btn-primary">New Restaurant</button>
</a>
<br />
<br />
<table class="table align-middle">
  <thead class="thead-dark">
    <tr>
      <th scope="col">#</th>
      <th scope="col">Name</th>
      <th scope="col">Email</th>
      <th scope="col">Role</th>
      <th scope="col">#</th>
    </tr>
  </thead>
  <tbody>
    {{#each users}}
    <tr>
      <th scope="row">{{this.id}}</th>
      <td>{{this.name}}</td>
      <td>{{this.email}}</td>
          {{#if this.isAdmin}}
          <td>admin</td>
          {{else}}
          <td>user</td>
          {{/if}}
      <td>
        <form action="/admin/users/{{this.id}}?_method=PATCH" method="POST" style="display: inline;">          
          <button type="submit" class="btn btn-link link-primary link-danger" style="text-decoration: none;">
            {{#if this.isAdmin}}
            admin
            {{else}}
            user
            {{/if}}
          </button>
        </form>
</td>
    </tr>
    {{/each}}
  </tbody>
</table>