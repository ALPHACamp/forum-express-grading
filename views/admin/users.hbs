<h1>餐廳後台</h1>
<div class="mb-3">
  <a href="/admin/restaurants" style="text-decoration:none;">Restaurant</a>
  <span class="mx-2">|</span>
  <a href="/admin/users" style="text-decoration:none;">Users</a>
</div>
<br />
<table class="table align-middle">
  <thead class="thead-dark">
    <tr>
      <th scope="col">#</th>
      <th scope="col">Name</th>
      <th scope="col">Email</th>
      <th scope="col">Role</th>
      <th scope="col">#</th>
    </tr>
  </thead>
  <tbody>
    {{#each users}}
    <tr>
      <th scope="row">{{ this.id }}</th>
      <td>{{ this.name }}</td>
      <td>{{ this.email }}</td>
      <td>{{#if this.isAdmin}}admin{{else}}user{{/if}}</td>
      <td>
        <form action="/admin/users/{{this.id}}?_method=PATCH" method="POST">
          <button type="submit" class="btn btn-link link-primary " style="text-decoration:none;"
            onclick="return confirm(`確定要更改權限嗎？`)">set as
            {{#if isAdmin}}
              user
            {{else}}
              admin
            {{/if}}
            </button>
        </form>
      </td>
    </tr>
    {{/each}}
  </tbody>
</table>