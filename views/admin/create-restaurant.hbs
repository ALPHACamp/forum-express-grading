<div class="w-75 mx-auto">
  <h1>新增餐廳</h1>
  <form action="/admin/restaurants" method="POST" class="mt-4">
    <div class="row gy-4">
      <div class="col-12">
        <label for="imageFile" class="form-label">餐廳封面</label>
        <input id="imageFile" name="image" type="file" class="form-control">
      </div>
      <div class="col-12">
        <label for="name" class="form-label">餐廳名稱</label>
        <input id="name" name="name" type="text" class="form-control" />
      </div>
      <div class="col-12 col-sm-7">
        <label for="tel" class="form-label">電話</label>
        <input id="tel" name="tel" type="tel" class="form-control" oninput="telFormat(event)" maxlength="10" />
      </div>
      <div class="col-12 col-sm">
        <label for="openingHours" class="form-label">營業時間</label>
        <input id="openingHours" name="openingHours" type="time" class="form-control" />
      </div>
      <div class="col-12">
        <label for="address" class="form-label">地址</label>
        <input id="address" name="address" type="text" class="form-control" />
      </div>
      <div class="col-12">
        <label for="description" class="form-label">餐廳描述</label>
        <textarea id="description" name="description" class="form-control" rows="4"></textarea>
      </div>
    </div>
    <div class="d-flex gap-3 justify-content-end mt-4">
      <button type="button" class="btn btn-secondary" onclick="history.back()">取消</button>
      <button type="submit" class="btn btn-primary">送出</button>
    </div>
  </form>
</div>

<script>
  function telFormat(event) {
    const inputType = event.inputType
    const telInput = document.getElementById("tel")
    let tel = telInput.value
    if (inputType === "insertText") {
      telInput.value = (tel.length === 3) ? `${tel.slice(0, 2)}-${tel.slice(2)}` : tel
    } else if (inputType === "deleteContentBackward") {
      telInput.value = (tel.length === 3) ? tel.slice(0, 2) : tel
    }
  }
</script>